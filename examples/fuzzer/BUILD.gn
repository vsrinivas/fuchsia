import("//build/fuzzing/fuzzer.gni")

group("fuzzer") {
  testonly = true
  deps = [
    ":example_fuzzers",
  ]
}

fuzz_package("example_fuzzers") {
  targets = [ ":baz_fuzzer" ]
  fuzz_host = true
}

fuzz_target("baz_fuzzer") {
  sources = [ "target.cc" ]
  deps = [ ":baz" ]
}

source_set("baz") {
  sources = [ "baz.cc" ]
  deps = [ "//src/lib/fxl" ]
}

