library examples.keyvaluestore.baseline;

/// An item in the store. The key must match the regex `^[A-Za-z]\\w+[A-Za-z0-9]$`. That
/// is, it must start with a letter, end with a letter or number, and contain at least one other
/// word character (letter, number, dash, or underscore) in between.
type Item = struct {
    key string:128;
    value vector<byte>:64000;
};

/// An enumeration of things that may go wrong when trying to write a value to our store.
type WriteError = flexible enum {
    UNKNOWN = 0;
    INVALID_KEY = 1;
    INVALID_VALUE = 2;
    ALREADY_EXISTS = 3;
};

/// A very basic key-value store - so basic, in fact, that one may only write to it, never read!
@discoverable
protocol Store {
    /// Writes an item to the store.
    WriteItem(struct {
        attempt Item;
    }) -> (struct {}) error WriteError;
};
