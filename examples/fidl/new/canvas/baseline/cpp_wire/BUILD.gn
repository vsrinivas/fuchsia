import("//build/components.gni")

# The two definitions below are Fuchsia components, which will be wrapped into a package for
# delivery to running devices.
fuchsia_component("client") {
  component_name = "canvas_baseline_client"
  manifest = "//examples/fidl/new/canvas/baseline/meta/client.cml"
  deps = [ "client:bin" ]
}
fuchsia_component("server") {
  component_name = "canvas_baseline_server"
  manifest = "//examples/fidl/new/canvas/baseline/meta/server.cml"
  deps = [ "server:bin" ]
}

# The Fuchsia package, containing all of our child components in one neat artifact.
fuchsia_package("examples_fidl_canvas_baseline_cpp_wire") {
  deps = [
    ":client",
    ":server",
    "//examples/fidl/new/canvas/baseline:client_config_values",
  ]
}

# The following is an internal test harness for validating this example. It is not part of the
# example itself, and exists as a validation method to ensure that the code does not go stale.
fuchsia_component("test") {
  testonly = true
  manifest = "//examples/fidl/new/canvas/baseline/test/meta/runner.cml"
  deps = [
    "//examples/fidl/new/canvas/baseline/test:runner_bin",
    "//examples/fidl/new/canvas/baseline/test/goldens:resources",
  ]
}
fuchsia_test_package("examples_fidl_canvas_baseline_cpp_wire_tests") {
  deps = [
    ":client",
    ":server",
    "//examples/fidl/new/canvas/baseline:client_config_values",
    "//examples/fidl/new/canvas/baseline/realm:realm",
  ]
  test_components = [ ":test" ]
}
group("tests") {
  testonly = true
  deps = [ ":examples_fidl_canvas_baseline_cpp_wire_tests" ]
}
