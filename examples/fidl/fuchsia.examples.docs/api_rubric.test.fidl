protocol Canvas {
    Flush() -> (zx.status code);
    Clear();
    UploadImage(uint32 image_id, Image image);
    PaintImage(uint32 image_id, float32 x, float32 y);
    DiscardImage(uint32 image_id);
    PaintSmileyFace(float32 x, float32 y);
