protocol Exporter {
    ExportThing(uint32 client_assigned_id, zx.handle:EVENTPAIR export_token);
};

protocol Importer {
    ImportThing(uint32 some_other_client_assigned_id, zx.handle:EVENTPAIR import_token);
};
// [END eventpair]

