executable("hello_scene_manager") {
  output_name = "hello_scene_manager"

  sources = [
    "app.cc",
    "app.h",
    "main.cc",
  ]

  deps = [
    "//application/lib/app",
    "//apps/mozart/lib/scenic:client",
    "//apps/mozart/lib/scenic:fidl_helpers",
    "//apps/mozart/services/scenic",
    "//apps/mozart/src/scene_manager/tests:util",
    "//garnet/public/lib/fidl/cpp/bindings",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
    "//garnet/lib/escher/escher",
  ]

  include_dirs = [
    "//garnet/lib/escher",
    "//third_party/glm",
    "//lib",
  ]

  defines = [ "GLM_ENABLE_EXPERIMENTAL" ]
}
