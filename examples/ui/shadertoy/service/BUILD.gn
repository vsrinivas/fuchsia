executable("service") {
  output_name = "shadertoy_service"

  sources = [
    "app.cc",
    "app.h",
    "compiler.cc",
    "compiler.h",
    "escher_utils.cc",
    "escher_utils.h",
    "glm_hack.h",
    "imagepipe_shadertoy.cc",
    "imagepipe_shadertoy.h",
    "main.cc",
    "pipeline.cc",
    "pipeline.h",
    "renderer.cc",
    "renderer.h",
    "shadertoy_factory_impl.cc",
    "shadertoy_factory_impl.h",
    "shadertoy_impl.cc",
    "shadertoy_impl.h",
    "shadertoy_state.cc",
    "shadertoy_state.h",
    "view_shadertoy.cc",
    "view_shadertoy.h",
  ]

  deps = [
    "services",
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/ui/scenic:fidl_helpers",
    "//garnet/public/lib/ui/scenic/fidl",
    "//garnet/public/lib/fidl/cpp/bindings",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/fsl",
    "//garnet/lib/escher/escher",
    "//garnet/lib/escher/examples/common",
    "//magenta/system/ulib/trace-provider",
    "//magma:vulkan",
  ]

  include_dirs = [
    "//lib",
    "//garnet/lib/escher",
    "//third_party/glm",
  ]
}
