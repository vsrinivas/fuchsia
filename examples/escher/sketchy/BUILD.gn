group("sketchy") {
  deps = [
    ":sketchy_demo",
  ]

  if (is_fuchsia) {
    deps += [ "ui" ]
  }
}

executable("sketchy_demo") {
  sources = [
    "sketchy_demo.cc",
    "sketchy_demo.h",
    "sketchy_main.cc",
  ]
  deps = [
    "//garnet/examples/escher/common",
    "//garnet/examples/escher/sketchy/sketchy",
  ]
  include_dirs = [
    "//lib",
    "//garnet/lib/escher",
    "//garnet/examples/escher/sketchy",
    "//third_party/glm",
  ]

  if (is_fuchsia) {
    deps += [ "//garnet/public/lib/vulkan" ]
  }

  if (is_linux) {
    configs += [ "//garnet/lib/escher:vulkan_linux" ]
  }
}
