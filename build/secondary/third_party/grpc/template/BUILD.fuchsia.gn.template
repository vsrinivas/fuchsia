    % if sources:
  ${indent}  sources = [
      % for src in sources:
  ${indent}    ${src}
      % endfor
  ${indent}  ]
    % endif
    % if lib_deps:

  ${indent}  deps = [
      % for dep in lib_deps:
  ${indent}    "${dep}",
      % endfor
  ${indent}  ]
    % endif
