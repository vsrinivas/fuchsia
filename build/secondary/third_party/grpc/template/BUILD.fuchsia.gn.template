  ${indent}    ":grpc_config",
  ${indent}    "//build/config:suppress_iterator_warnings",
  ${indent}  ]
    % if extra_configs:
  ${indent}  configs += [
        % for config in extra_configs:
  ${indent}    "${config}",
        % endfor
  ${indent}  ]
    % endif
    % if include_dirs:
  ${indent}  include_dirs = [
      % for d in include_dirs:
  ${indent}    "${d}",
