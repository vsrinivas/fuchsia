template("zx_test") {
  executable(target_name) {
    testonly = true
    forward_variables_from(invoker, "*", [ "sdk_migrated" ])
  }
  not_needed(invoker, [ "sdk_migrated" ])
}

set_defaults("zx_test") {
  configs = default_executable_configs
}
