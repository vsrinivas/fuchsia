{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/virtio_net_test_util",
    },
    use: [
        {
            directory: "dev-ethernet",
            rights: [ "r*" ],
            path: "/dev/class/ethernet",
        },
        {
            directory: "dev-network",
            rights: [ "r*" ],
            path: "/dev/class/network",
        },
        {
            protocol: [
                "fuchsia.hardware.network.MacAddressing",
                "fuchsia.hardware.network.Port",
            ],
            from: "parent",
        },
    ],
}
