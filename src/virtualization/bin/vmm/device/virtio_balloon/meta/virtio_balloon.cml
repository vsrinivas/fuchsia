{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/virtio_balloon_bin",
    },
    capabilities: [
        {
            protocol: [ "fuchsia.virtualization.hardware.VirtioBalloon" ],
        },
    ],
    use: [
        {
            protocol: [ "fuchsia.tracing.provider.Registry" ],
        },
    ],
    expose: [
        {
            protocol: [ "fuchsia.virtualization.hardware.VirtioBalloon" ],
            from: "self",
        },
    ],
}
