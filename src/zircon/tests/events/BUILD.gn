import("//build/test.gni")
import("//build/testing/bootfs_test.gni")

test("events") {
  output_name = "events-test"
  configs += [
    "//build/config:all_source",
    "//build/unification/config:zircon-migrated",
  ]
  sources = [ "events.c" ]
  deps = [
    "//sdk/lib/fdio",
    "//zircon/public/lib/zxtest",
  ]
  libs = [ "zircon" ]
}

bootfs_test("events-bootfs-test") {
  name = "events-test"
  deps = [ ":events" ]
}
