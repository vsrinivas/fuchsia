import("//build/test.gni")
import("//build/testing/bootfs_test.gni")

test("vdso") {
  output_name = "vdso-test"
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [ "vdso.cc" ]
  deps = [
    "//sdk/lib/fdio",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/elfload",
  ]
}

test("vdso-base") {
  output_name = "vdso-base-test"
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [ "vdso-base.c" ]
  deps = [
    "//sdk/lib/fdio",
    "//zircon/public/lib/zxtest",
  ]
  libs = [ "zircon" ]
}

test("vdso-variant") {
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [ "vdso-variant.c" ]
  deps = [ "//sdk/lib/fdio" ]
  data_deps = [ ":vdso-variant-helper" ]
  libs = [ "zircon" ]

  # TODO(fxb/58162): delete the below and fix compiler warnings
  configs += [ "//build/config:Wno-conversion" ]
}

executable("vdso-variant-helper") {
  configs += [ "//build/unification/config:zircon-migrated" ]

  testonly = true
  visibility = [ ":*" ]
  sources = [ "helper/vdso-variant-helper.c" ]
  deps = [
    "//sdk/lib/fdio",
    "//zircon/public/lib/zxtest",
  ]
}

bootfs_test("vdso-variant-bootfs-test") {
  name = "vdso-variant"
  deps = [ ":vdso-variant" ]
}

bootfs_test("vdso-base-bootfs-test") {
  name = "vdso-base-test"
  deps = [ ":vdso-base" ]
}

bootfs_test("vdso-bootfs-test") {
  name = "vdso-test"
  deps = [ ":vdso" ]
}
