executable("printer") {
  sources = [
    "printer.cc",
  ]
}

executable("process_loop") {
  testonly = true
  output_name = "process_loop"

  sources = [
    "process_loop.cc",
  ]
}

executable("process_spawner") {
  testonly = true
  output_name = "process_spawner"

