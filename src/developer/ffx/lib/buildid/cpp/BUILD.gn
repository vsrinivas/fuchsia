static_library("buildid") {
  sources = [ "buildid.h" ]
  if (current_os == "linux") {
    sources += [ "linux.cc" ]
  } else if (current_os == "mac") {
    sources += [ "macos.cc" ]
  }

  cflags = [ "-fPIC" ]
  configs += [
    # TODO(fxbug.dev/58162): delete the below and fix compiler warnings
    "//build/config:Wno-conversion",
  ]
}
