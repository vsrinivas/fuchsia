  edition = "2020"
  with_unit_tests = true
  deps = [
    "//sdk/fidl/fuchsia.diagnostics:fuchsia.diagnostics-rustc",
    "//src/developer/ffx/plugins/inspect/common:ffx_inspect_common",
    "//src/diagnostics/iquery:lib",
