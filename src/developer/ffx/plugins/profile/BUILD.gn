import("//src/developer/ffx/build/ffx_plugin.gni")

ffx_plugin("ffx_profile") {
  version = "0.1.0"
  edition = "2018"
  plugin_deps = [ "cpu:ffx_cpu" ]

  with_unit_tests = true

  args_sources = [ "src/args.rs" ]
}

group("tests") {
  testonly = true

  deps = [
    ":ffx_profile_tests",
    "cpu:tests",
  ]
}
