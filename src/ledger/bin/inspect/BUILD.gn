visibility = [ "//src/ledger/*" ]

source_set("inspect") {
  sources = [
    "inspect.cc",
    "inspect.h",
  ]

  public_deps = [
    "//src/ledger/bin/storage/public",
  ]

  deps = [
    "//sdk/fidl/fuchsia.ledger",
    "//src/ledger/bin/app:constants",
    "//src/ledger/lib/logging",
