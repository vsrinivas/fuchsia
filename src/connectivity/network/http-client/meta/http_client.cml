{
    include: [
        "//sdk/lib/diagnostics/syslog/client.shard.cml",
        "//src/lib/fuchsia-hyper/hyper.shard.cml",
    ],
    program: {
        runner: "elf",
        binary: "bin/http_client",
    },
    capabilities: [
        { protocol: "fuchsia.net.http.Loader" },
    ],
    use: [
        {
            directory: "root-ssl-certificates",
            rights: [ "r*" ],
            path: "/config/ssl",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.net.http.Loader",
            from: "self",
        },
    ],
}
