  test_components = [ ":scan-legacy-privacy-off" ]
  test_components += hw_sim_test_components_for_all_privacies
  deps = [
    ":scan-legacy-privacy-off-driver",
    "//src/connectivity/wlan/wlanstack:wlanstack-values",
  ]
  deps += hw_sim_deps_for_all_privacies
  deps += shared_deps
}

