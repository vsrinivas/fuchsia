import("//build/config/fuchsia/rules.gni")
import("//build/package.gni")

driver_module("iwlwifi_driver") {
  output_name = "iwlwifi"

  sources = [
    "iwl-debug.c",
    "iwl-drv.c",
    "pcie/drv.c",
  ]

  deps = [
    "//zircon/public/lib/ddk",
    "//zircon/public/lib/driver",
  ]
}

package("iwlwifi") {
  deprecated_system_image = true

  deps = [
    ":iwlwifi_driver",
  ]

  drivers = [
    {
      name = "iwlwifi.so"
    },
  ]
}
