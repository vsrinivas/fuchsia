    "wmi-ops.h",
    "wmi-tlv.c",
    "wmi-tlv.h",
    "wmi.c",
    "wmi.h",
    "wow.h",
  ]

  deps = [
    "//garnet/lib/wlan/protocol",
    "//sdk/banjo/ddk.hw.wlan.ieee80211",
    "//sdk/banjo/ddk.hw.wlan.wlaninfo",
    "//sdk/banjo/ddk.protocol.pci",
    "//sdk/banjo/ddk.protocol.wlanphyimpl",
    "//src/devices/lib/driver",
