import("//build/test/test_package.gni")
import("//build/testing/environments.gni")

executable("sdio_test") {
  output_name = "sdio_test"
  testonly = true
  sources = [ "sdio_test.cc" ]
  deps = [
    "//sdk/banjo/ddk.protocol.gpio",
    "//sdk/banjo/ddk.protocol.gpio:ddk.protocol.gpio_mock",
    "//sdk/banjo/ddk.protocol.sdio",
    "//sdk/banjo/ddk.protocol.sdio:ddk.protocol.sdio_mock",
    "//src/connectivity/wlan/drivers/third_party/broadcom/brcmfmac:core",
    "//src/connectivity/wlan/drivers/third_party/broadcom/brcmfmac/sdio",
    "//src/devices/lib/broadcom",
    "//src/devices/testing/fake_ddk",
    "//src/lib/ddk",
    "//zircon/public/lib/zxtest",
    "//zircon/system/public",
  ]
  configs += [ "//build/config:Wno-conversion" ]
}

unittest_package("brcmfmac_sdio_test") {
  package_name = "brcmfmac-sdio-test"

  deps = [ ":sdio_test" ]

  tests = [
    {
      name = "sdio_test"
      environments = basic_envs
    },
  ]
}
