            "dma_ring_test",
            "intrusive_list_test",
            "netbuf_test",
            "task_queue_test",
            "timer_test",
            "workqueue_test",
          ]) {
    deps += [ ":$test_name" ]
    tests += [
      {
        name = "$test_name"
        environments = basic_envs
      },
    ]
  }
}
