###############################################################################
# AGGREGATE LIBRARIES

source_set("lib") {
  public_deps = [
    ":timer",
    ":trace",
  ]
}

source_set("tests") {
  testonly = true
  deps = [
    ":trace_test",
  ]
}

###############################################################################

# timer
source_set("timer") {
  sources = [
    "timer.cc",
    "timer.h",
  ]
  deps = [
    "//src/connectivity/overnet/lib/vocabulary:callback",
    "//src/connectivity/overnet/lib/vocabulary:optional",
    "//src/connectivity/overnet/lib/vocabulary:time",
  ]
}

# trace
source_set("trace") {
  sources = [
    "trace.cc",
    "trace.h",
  ]
  deps = [
    "//src/connectivity/overnet/lib/vocabulary:optional",
  ]
}

source_set("trace_test") {
  testonly = true
  sources = [
    "trace_test.cc",
  ]
  deps = [
    ":trace",
    "//src/connectivity/overnet/lib/vocabulary:lib",
    "//third_party/googletest:gmock",
    "//third_party/googletest:gtest",
  ]
}

# trace_cout
source_set("trace_cout") {
  sources = [
    "trace_cout.cc",
    "trace_cout.h",
  ]
  deps = [
    ":timer",
    ":trace",
  ]
}
