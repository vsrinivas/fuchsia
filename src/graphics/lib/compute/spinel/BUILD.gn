config("spinel_public_config") {
  # The sources and clients use 'spinel_xxx.h' to include the headers.
  include_dirs = [ "." ]
}

source_set("spinel") {
  public = [
    "spinel.h",
    "spinel_assert.h",
    "spinel_result.h",
    "spinel_types.h",
  ]
  friend = [ "platforms/vk" ]
  sources = [
    "allocator_host.c",
    "allocator_host.h",
    "composition.c",
    "composition.h",
    "context.c",
    "context.h",
    "core.h",
    "core_c.h",
    "handle.h",
    "path_builder.c",
    "path_builder.h",
    "raster_builder.c",
    "raster_builder.h",
    "spinel.h",
    "spinel_assert.c",
    "spinel_assert.h",
    "spinel_result.h",
    "spinel_types.h",
    "state_assert.h",
    "styling.c",
    "styling.h",
    "suballocator.c",
    "suballocator.h",
    "weakref.c",
    "weakref.h",
  ]
  deps = [
    "//src/graphics/lib/compute/common",
  ]
  public_configs = [ ":spinel_public_config" ]
}

group("tests") {
  testonly = true
  public_deps = [
    "platforms/vk/tests",
  ]
}
