import("//build/components.gni")

executable("bin") {
  output_name = "tones"

  sources = [
    "main.cc",
    "midi_keyboard.cc",
    "tone_generator.cc",
    "tone_generator.h",
    "tones.cc",
    "tones.h",
  ]

  deps = [
    "//sdk/fidl/fuchsia.hardware.midi:fuchsia.hardware.midi_cpp_wire",
    "//sdk/fidl/fuchsia.media:fuchsia.media_hlcpp",
    "//sdk/lib/fit",
    "//sdk/lib/media/cpp",
    "//sdk/lib/sys/component/cpp",
    "//sdk/lib/sys/cpp",
    "//sdk/lib/syslog/cpp",
    "//src/lib/fsl",
    "//src/lib/fxl",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/fzl",
  ]
}

fuchsia_shell_package("tones") {
  deps = [ ":bin" ]
}
