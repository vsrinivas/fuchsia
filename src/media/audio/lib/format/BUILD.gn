import("//src/sys/build/components.gni")

source_set("format") {
  sources = [
    "audio_buffer.h",
    "constants.h",
    "driver_format.cc",
    "driver_format.h",
    "format.cc",
    "format.h",
    "frames.h",
    "traits.h",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.hardware.audio",
    "//sdk/fidl/fuchsia.media",
    "//sdk/lib/syslog/cpp",
    "//src/media/audio/lib/timeline",
    "//zircon/public/lib/ffl",
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/trace",
  ]

  deps = [
    "//src/lib/fxl",
    "//zircon/system/ulib/audio-proto-utils",
  ]
}

executable("unittest-bin") {
  visibility = [ ":*" ]
  testonly = true
  output_name = "audio-libformat-unittests"

  sources = [
    "audio_buffer_unittest.cc",
    "format_unittest.cc",
  ]

  deps = [
    ":format",
    "//src/lib/fxl/test:gtest_main",
    "//src/zircon/lib/zircon",
    "//third_party/googletest:gmock",
  ]
}

fuchsia_unittest_package("audio-libformat-unittests") {
  deps = [ ":unittest-bin" ]

  test_specs = {
    environments = basic_envs
  }
}

group("tests") {
  testonly = true
  deps = [ ":audio-libformat-unittests" ]
}
