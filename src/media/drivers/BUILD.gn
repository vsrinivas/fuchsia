group("drivers") {
  if (target_cpu == "arm64") {
    deps = [
      "amlogic_decoder:amlogic_decoder",
      "amlogic_encoder",
    ]
  }
}

group("tests") {
  testonly = true

  if (target_cpu == "arm64") {
    deps = [
      "amlogic_decoder:tests",
      "amlogic_encoder:tests",
    ]
  }
}
