  sources = [
    "test/fake_service_provider.cc",
    "test/fake_service_provider.h",
    "test/payload_manager_test.cc",
  ]

  deps = [
    ":graph",
    "//garnet/public/lib/gtest",
    "//src/lib/fsl",
    "//src/lib/fxl/test:gtest_main",
  ]
}
