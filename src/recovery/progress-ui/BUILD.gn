fuchsia_component("component") {
  component_name = "progress_ui"
  manifest = "meta/progress_ui.cml"
  deps = [ ":bin" ]
}

fuchsia_package("package") {
  package_name = "progress-ui"
  deps = [
    ":component",
    "//src/recovery/system:recovery_logo",
    "//src/recovery/system:roboto_regular",
  ]
}

