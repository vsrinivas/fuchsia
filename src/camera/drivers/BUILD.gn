import("//build/board.gni")

group("drivers") {
  testonly = true

  deps = [
    "bus",
    "controller/sherlock",
    "hw_accel",
    "sensors",
    "test_utils",
    "usb_video",
  ]
}

group("tests") {
  testonly = true
  deps = [
    ":bind_tests",
    "controller:tests",
    "hw_accel:tests",
    "sensors:tests",
    "test_utils:tests",
    "usb_video:tests",
  ]
}

group("bind_tests") {
  testonly = true
  deps = [
    "bus:bind_test",
    "usb_video:bind_test",
  ]
}

# Use this target to include actual drivers and tests,
# but not supporting libraries.
group("all") {
  testonly = true
  deps = [
    ":tests",
    "bus",
    "controller/sherlock",
    "hw_accel",
    "sensors",
    "usb_video",
  ]
}

group("sherlock") {
  deps = [
    "bus",
    "controller/sherlock",
    "hw_accel",
    "sensors",
  ]
}
