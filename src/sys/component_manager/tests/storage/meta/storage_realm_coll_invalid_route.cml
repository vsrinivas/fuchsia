{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/storage_realm_coll_invalid_route",
    },
    collections: [
        {
            name: "coll_bad_route",
            durability: "transient",
        },
    ],
    use: [
        {
            protocol: "fuchsia.component.Realm",
            from: "framework",
        },
        {
            event_stream: [
                "destroyed_v2",
                "stopped_v2",
            ],
            from: "parent",
        },
        {
            directory: "hub",
            from: "framework",
            rights: [ "r*" ],
            path: "/hub",
        },
    ],
    offer: [
        {
            protocol: "fuchsia.logger.LogSink",
            from: "parent",
            to: [ "#coll_bad_route" ],
        },
    ],
}
