    ":expose_dir_rights",
    ":rights_integration_test_bin",
    ":use_dir_rights",
    ":use_storage",
  ]

  resources = [
    {
      path = "${root_gen_dir}/src/sys/component_manager/tests/rights/component_manager_rights_test_config"

