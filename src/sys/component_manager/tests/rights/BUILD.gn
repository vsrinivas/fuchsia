    {
      path = rebase_path("meta/root_storage_offer_rights.cml")
      dest = "root_storage_offer_rights.cm"
    },
    {
      path = rebase_path("meta/use_storage.cml")
      dest = "use_storage.cm"
    },
  ]

  binaries = [
    {
      name = "use_dir_rights"
    },
    {
      name = "use_storage"
    },
    {
      name = "expose_dir_rights"
    },
  ]

  tests = [
    {
      name = "rights_integration_test"
    },
  ]
}
