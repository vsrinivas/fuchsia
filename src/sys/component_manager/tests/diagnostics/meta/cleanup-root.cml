{
    children: [
        {
            name: "archivist",
            url: "#meta/archivist-for-embedding.cm",
        },
        {
            name: "cleanup",
            url: "#meta/cleanup.cm",
            startup: "eager",
        },
    ],
    offer: [
        {
            protocol: [
                "fuchsia.logger.LogSink",
                "fuchsia.sys2.EventSource",
            ],
            from: "parent",
            to: [
                "#archivist",
                "#cleanup",
            ],
        },
        {
            protocol: [ "fuchsia.diagnostics.ArchiveAccessor" ],
            from: "#archivist",
            to: "#cleanup",
        },
        {
            event: "directory_ready",
            from: "parent",
            to: "#archivist",
            filter: { name: "diagnostics" },
        },

        // This event is not needed for the test to pass, but including it reduces log noise.
        {
            event: "stopped",
            from: "framework",
            to: "#archivist",
        },
        {
            event: "capability_requested",
            from: "framework",
            to: "#archivist",
            filter: { name: "fuchsia.logger.LogSink" },
        },
    ],
}
