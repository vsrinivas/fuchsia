{
    program: {
        binary: "bin/capability_ready_child",
    },
    capabilities: [
        {
            directory: "normal",
            rights: [ "r*" ],
            path: "/normal",
        },
        {
            directory: "aliased",
            rights: [ "r*" ],
            path: "/aliased",
        },
        {
            directory: "not_filtered",
            rights: [ "r*" ],
            path: "/not_filtered",
        },

        // Insufficient rights (connection should fail)
        {
            directory: "insufficient_rights",
            rights: [ "x*" ],
            path: "/insufficient_rights",
        },

        // Never published
        {
            directory: "not_published",
            rights: [ "r*" ],
            path: "/not_published",
        },
    ],
    use: [
        { runner: "elf" },
    ],
    expose: [
        {
            directory: "normal",
            from: "self",
            to: "framework",
        },
        {
            directory: "aliased",
            from: "self",
            as: "nested",
            to: "framework",
        },
        {
            directory: "not_filtered",
            from: "self",
            to: "framework",
        },
        {
            directory: "insufficient_rights",
            from: "self",
            to: "framework",
        },
        {
            directory: "not_published",
            from: "self",
            to: "framework",
        },
    ],
}
