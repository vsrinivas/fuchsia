{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/app",
    },
    capabilities: [
        {
            directory: "prof-data",
            rights: [ "r*" ],
            path: "/prof-data",
        },
        {
            directory: "debugdata",
            rights: [ "r*" ],
            path: "/debugdata",
        },
    ],
    use: [
        {
            directory: "boot",
            rights: [ "r*" ],
            path: "/boot",
        },
        {
            protocol: [ "fuchsia.boot.SvcStashProvider" ],
        },
    ],
    expose: [
        {
            directory: "prof-data",
            from: "self",
        },
        {
            directory: "debugdata",
            from: "self",
        },
    ],
}
