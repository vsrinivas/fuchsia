executable("sample_tests") {
  testonly = true
  sources = [ "sample_tests.cc" ]

  deps = [
    "//garnet/public/lib/gtest",
    "//src/lib/fxl/test:gtest_main",
  ]
}

executable("no_tests") {
  testonly = true
  sources = [ "empty_test_file.cc" ]

  deps = [
    "//garnet/public/lib/gtest",
    "//src/lib/fxl/test:gtest_main",
  ]
}

group("test_data") {
  testonly = true
  public_deps = [
    ":no_tests",
    ":sample_tests",
  ]
}
