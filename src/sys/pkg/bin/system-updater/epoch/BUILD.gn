import("//build/rust/rustc_binary.gni")
import("//build/rust/rustc_test.gni")

generator_deps = [ "//third_party/rust_crates:argh" ]
generator_test_deps = [ "//third_party/rust_crates:matches" ]
generator_sources = [
  "src/args.rs",
  "src/main.rs",
]

rustc_binary("generator") {
  name = "epoch_generator"
  edition = "2018"
  deps = generator_deps
  sources = generator_sources
}

rustc_test("epoch-generator-tests") {
  deps = generator_deps + generator_test_deps
  source_root = "src/main.rs"
  sources = generator_sources
}

group("host_tests") {
  testonly = true
  deps = [ ":epoch-generator-tests($host_toolchain)" ]
}
