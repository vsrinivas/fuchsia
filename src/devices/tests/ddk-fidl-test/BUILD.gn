import("//build/test.gni")
import("//build/unification/images/migrated_manifest.gni")

test("ddk-fidl-test") {
  # Dependent manifests unfortunately cannot be marked as `testonly`.
  # TODO(44278): Remove when converting this file to proper GN build idioms.
  testonly = false
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [ "test.cc" ]
  deps = [
    "//zircon/public/lib/ddk",
    "//zircon/public/lib/devmgr-integration-test",
    "//zircon/public/lib/devmgr-launcher",
    "//zircon/public/lib/driver-integration-test",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/fdio",
    "//zircon/public/lib/fidl",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//src/devices/tests/fuchsia-hardware-test:fuchsia.hardware.test_c",
    "//src/devices/tests/fuchsia-hardware-test:fuchsia.hardware.test_llcpp",
  ]
}

migrated_manifest("ddk-fidl-test-manifest") {
  deps = [ ":ddk-fidl-test" ]
}
