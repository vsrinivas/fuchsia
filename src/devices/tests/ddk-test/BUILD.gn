import("//build/config/fuchsia/rules.gni")

assert(!defined(zx) || zx != "/",
       "This file can only be used in the Fuchsia GN build.")

import("//build/unification/images/migrated_manifest.gni")

driver_module("ddk-test") {
  test = true
  defines = [ "_ALL_SOURCE" ]
  configs += [ "//build/config/fuchsia:enable_zircon_asserts" ]
  configs -= [ "//build/config/fuchsia:no_cpp_standard_library" ]
  configs += [ "//build/config/fuchsia:static_cpp_standard_library" ]
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [
    "ddk-test-binding.c",
    "ddk-test.c",
    "metadata-test.c",
    "usb-request-test.c",
  ]
  deps = [
    "//sdk/banjo/ddk.protocol.test",
    "//sdk/banjo/ddk.protocol.usb",
    "//sdk/banjo/ddk.protocol.usb.request",
    "//src/devices/lib/driver",
    "//zircon/public/lib/ddk",
    "//zircon/public/lib/fdio",
    "//zircon/public/lib/sync",
    "//zircon/public/lib/unittest",
    "//zircon/public/lib/zx",
    "//zircon/system/dev/lib/fake-bti",
    "//zircon/system/dev/lib/usb",
  ]

  # TODO(ZX-2863): This driver violates the allowed shlib deps policy.
  # The GN build does not enforce this, but the bug should still be addressed.
}

migrated_manifest("ddk-test-manifest") {
  deps = [ ":ddk-test" ]
}
