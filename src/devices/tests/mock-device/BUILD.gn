import("//build/config/fuchsia/rules.gni")
import("//build/fidl/fidl.gni")
import("//build/unification/images/migrated_manifest.gni")

driver_module("mock-device") {
  test = true
  defines = [ "_ALL_SOURCE" ]
  configs += [ "//build/config/fuchsia:enable_zircon_asserts" ]
  configs -= [ "//build/config/fuchsia:no_cpp_standard_library" ]
  configs += [ "//build/config/fuchsia:static_cpp_standard_library" ]
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [
    "device.cc",
    "fidl.cc",
  ]
  deps = [
    ":fuchsia.device.mock_llcpp",
    "//sdk/banjo/ddk.protocol.test",
    "//src/devices/lib/driver",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/fdio",
    "//zircon/public/lib/fidl",
    "//zircon/public/lib/zircon-internal",
    "//zircon/public/lib/zx",
    "//zircon/system/ulib/ddk",
    "//zircon/system/ulib/ddktl",
  ]
}

fidl("fuchsia.device.mock") {
  # Dependent manifests unfortunately cannot be marked as `testonly`.
  # TODO(44278): Remove when converting this file to proper GN build idioms.
  testonly = false
  sources = [ "mock-device.test.fidl" ]
  public_deps = [ "//zircon/vdso/zx" ]
}

migrated_manifest("mock-device-manifest") {
  deps = [ ":mock-device" ]
}
