library banjo.examples.callback;

using banjo.examples.callback2;
using zx;

struct Point {
    int32 x;
    int32 y;
};

enum Direction : uint32 {
    Up = 0;
    Down = 1;
    Left = 2;
    Right = 3;
};

[Transport = "Banjo", BanjoLayout = "ddk-callback"]
protocol Draw {
    Callback(Point p, Direction d) -> ();
};

[Transport = "Banjo", BanjoLayout = "ddk-protocol"]
protocol Drawing {
    RegisterCallback(Draw cb) -> ();
    DeregisterCallback() -> ();
    RegisterCallback2(banjo.examples.callback2.DrawCallback cb) -> ();
    DrawLots(zx.handle:VMO commands) -> (int32 result, Point p);
    DrawArray(array<Point>:4 points) -> (zx.status rv);
    Describe(string:64 one) -> (string:128 two);
};
