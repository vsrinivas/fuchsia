import("//build/bind/bind.gni")
import("//build/components.gni")
import("//build/config/fuchsia/rules.gni")
import("//build/test.gni")

bind_rules("bind") {
  rules = "usb-hub-rewrite.bind"
  output = "usb_hub_rewrite_bind.h"
  deps = [ "//src/devices/bind/fuchsia.usb" ]
}

driver_module("usb-hub-rewrite") {
  configs += [
    "//build/config:all_source",
    "//build/config/fuchsia:enable_zircon_asserts",
  ]
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [ "usb-hub.cc" ]
  deps = [
    ":bind",
    "//sdk/banjo/fuchsia.hardware.usb",
    "//sdk/banjo/fuchsia.hardware.usb.bus",
    "//sdk/banjo/fuchsia.hardware.usb.composite",
    "//sdk/banjo/fuchsia.hardware.usb.hub",
    "//sdk/banjo/fuchsia.hardware.usb.hubdescriptor",
    "//sdk/banjo/fuchsia.hardware.usb.request",
    "//sdk/lib/fit-promise",
    "//src/devices/lib/driver",
    "//src/devices/lib/synchronous-executor",
    "//src/devices/usb/lib/usb",
    "//src/lib/ddk",
    "//zircon/public/lib/async",
    "//zircon/public/lib/async-cpp",
    "//zircon/public/lib/sync",
    "//zircon/public/lib/zxc",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/inspect",
  ]
}

test("usb-hub-test") {
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [
    "usb-hub-test.cc",
    "usb-hub.cc",
  ]
  defines = [ "UNITTEST" ]
  deps = [
    ":bind",
    "//sdk/banjo/fuchsia.hardware.usb",
    "//sdk/banjo/fuchsia.hardware.usb.bus",
    "//sdk/banjo/fuchsia.hardware.usb.composite",
    "//sdk/banjo/fuchsia.hardware.usb.hub",
    "//sdk/banjo/fuchsia.hardware.usb.hubdescriptor",
    "//sdk/banjo/fuchsia.hardware.usb.request",
    "//sdk/lib/fdio",
    "//sdk/lib/fit-promise",
    "//src/devices/lib/synchronous-executor",
    "//src/devices/testing/fake-bti",
    "//src/devices/testing/fake_ddk",
    "//src/devices/usb/lib/usb",
    "//zircon/public/lib/async",
    "//zircon/public/lib/async-cpp",
    "//zircon/public/lib/zxc",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/inspect",
  ]
}

fuchsia_unittest_package("usb-hub-package") {
  deps = [ ":usb-hub-test" ]
}

group("tests") {
  testonly = true
  deps = [ ":usb-hub-package" ]
}
