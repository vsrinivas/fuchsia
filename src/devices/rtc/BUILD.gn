group("drivers") {
  testonly = true
  deps = [
    "drivers/fallback",
    "drivers/nxp",
    "drivers/pl031-rtc",
  ]

  if (current_cpu == "x64") {
    deps += [ "drivers/intel-rtc" ]
  }
}

group("tests") {
  testonly = true
  deps = [
    "drivers:tests",
    "lib:tests",
  ]
}
