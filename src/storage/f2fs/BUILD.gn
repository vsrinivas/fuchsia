static_library("f2fs") {
  friend = [ "test:*" ]
  sources = [
    "bcache.cc",
    "checkpoint.cc",
    "data.cc",
    "dir.cc",
    "dir.h",
    "dir_entry_cache.cc",
    "dir_entry_cache.h",
    "dir_hash.cc",
    "f2fs.cc",
    "f2fs_internal.h",
    "f2fs_layout.h",
    "f2fs_lib.h",
    "f2fs_types.h",
    "file.cc",
    "file.h",
    "file_cache.cc",
    "file_cache.h",
    "fsck.cc",
    "gc.cc",
    "gc.h",
    "inline.cc",
    "mkfs.cc",
    "mount.cc",
    "namei.cc",
    "node.cc",
    "node.h",
    "node_page.cc",
    "node_page.h",
    "recovery.cc",
    "runner.cc",
    "runner.h",
    "segment.cc",
    "segment.h",
    "storage_buffer.cc",
    "storage_buffer.h",
    "super.cc",
    "third_party/ext2_hash/hash.cc",
    "third_party/ext2_hash/hash.h",
    "vnode.cc",
    "vnode.h",
    "vnode_cache.cc",
    "vnode_cache.h",
    "writeback.cc",
    "writeback.h",
  ]

  public = [
    "bcache.h",
    "f2fs.h",
    "fsck.h",
    "mkfs.h",
    "mount.h",
  ]

  public_deps = [
    "//src/lib/storage/vfs/cpp",
    "//src/lib/storage/vfs/cpp/journal",
    "//src/lib/storage/vfs/cpp/transaction",
    "//src/lib/uuid",
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/storage/buffer",
    "//zircon/third_party/ulib/safemath",
  ]

  deps = [
    "//sdk/lib/fit-promise",
    "//sdk/lib/syslog/cpp",
    "//zircon/system/ulib/zxc",
  ]

  if (is_linux) {
    sources += [ "sync_host.cc" ]

    public += [ "sync_host.h" ]
  }

  if (is_fuchsia) {
    sources += [
      "component_runner.cc",
      "component_runner.h",
      "inspect.cc",
      "inspect.h",
      "service/admin.cc",
      "service/admin.h",
      "service/lifecycle.cc",
      "service/lifecycle.h",
      "service/startup.cc",
      "service/startup.h",
      "vmo_manager.cc",
      "vmo_manager.h",
    ]

    public_deps += [
      "//sdk/fidl/fuchsia.hardware.block:fuchsia.hardware.block_c",
      "//sdk/fidl/fuchsia.process.lifecycle:fuchsia.process.lifecycle_cpp_wire",
      "//src/lib/storage/block_client/cpp",
      "//src/storage/fidl/fuchsia.fs.startup:fuchsia.fs.startup_cpp_wire",
      "//zircon/system/ulib/zircon-internal",
      "//zircon/system/ulib/zx",
    ]

    deps += [
      "//sdk/fidl/fuchsia.fs:fuchsia.fs_cpp_wire",
      "//sdk/fidl/fuchsia.io:fuchsia.io_hlcpp",
      "//sdk/lib/fdio",
      "//sdk/lib/fidl",
      "//sdk/lib/inspect/service/cpp",
      "//src/lib/storage/vfs/cpp/inspect",
      "//zircon/system/ulib/async",
      "//zircon/system/ulib/async:async-cpp",
      "//zircon/system/ulib/async-default",
      "//zircon/system/ulib/async-loop",
      "//zircon/system/ulib/async-loop:async-loop-cpp",
      "//zircon/system/ulib/async-loop:async-loop-default",
      "//zircon/system/ulib/fdio-caller",
      "//zircon/system/ulib/fidl-async:fidl-async-cpp",
      "//zircon/system/ulib/fidl-utils",
      "//zircon/system/ulib/inspect",
      "//zircon/system/ulib/sync",
      "//zircon/system/ulib/trace",
      "//zircon/system/ulib/trace-engine",
      "//zircon/system/ulib/trace-provider",
    ]
  }
}

group("tests") {
  testonly = true
  deps = [
    "test:f2fs-fs-tests",
    "test:f2fs-slow-fs-tests",
  ]
}
