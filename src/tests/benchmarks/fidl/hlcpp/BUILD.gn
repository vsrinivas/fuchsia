import("//build/fidl/fidl.gni")
import("//build/test/test_package.gni")
import("//build/testing/environments.gni")
import("//src/tests/benchmarks/fidl/benchmark_suite/benchmark_suite.gni")
import("//tools/fidl/gidl/gidl.gni")

gidl_cpp_benchmarks("benchmark_suite_hlcpp") {
  testonly = true
  inputs = benchmark_suite_gidl_files
  fidl = "//src/tests/benchmarks/fidl/benchmark_suite:benchmark_suite_fidl"
  deps = [
    "//sdk/lib/fidl/cpp:handle_util",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/fidl",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
    "//zircon/system/ulib/perftest",
  ]
}

executable("bin") {
  output_name = "hlcpp_fidl_microbenchmarks"
  testonly = true
  sources = [ "main.cc" ]
  deps = [
    ":benchmark_suite_hlcpp",
    "//sdk/lib/fidl/cpp",
    "//src/tests/benchmarks/fidl/benchmark_suite:benchmark_suite_fidl",
    "//src/zircon/lib/zircon",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/fidl",
    "//zircon/system/ulib/perftest",
  ]
}

package("hlcpp") {
  testonly = true

  deps = [ ":bin" ]

  binaries = [
    {
      name = "hlcpp_fidl_microbenchmarks"
      shell = true
    },
  ]
}
