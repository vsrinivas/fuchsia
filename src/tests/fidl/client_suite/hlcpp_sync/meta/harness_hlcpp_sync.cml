{
    include: [
        // gtest runner
        "//src/sys/test_runners/gtest/default.shard.cml",

        // Enable system logging
        "syslog/client.shard.cml",
    ],
    program: {
        binary: "bin/client_suite_harness",
    },
    children: [
        {
            name: "hlcpp_sync",
            url: "#meta/client.cm",
        },
    ],
    use: [
        {
            protocol: "fidl.clientsuite.Runner",
            from: "#hlcpp_sync",
        },
    ],
    offer: [
        {
            protocol: [ "fuchsia.logger.LogSink" ],
            from: "parent",
            to: "#hlcpp_sync",
        },
    ],
}
