import("//build/components.gni")
import("//build/test.gni")

executable("bin") {
  testonly = true
  output_name = "server_suite_harness"
  sources = [
    "basic_tests.cc",
    "bytes.h",
    "channel.h",
    "coding_tests.cc",
    "epitaph_tests.cc",
    "handle_rights_tests.cc",
    "harness.cc",
    "harness.h",
    "message_header_tests.cc",
    "ordinals.h",
  ]

  deps = [
    "//sdk/lib/fdio",
    "//sdk/lib/fidl",
    "//src/lib/fxl",
    "//src/lib/fxl/test:gtest_main",
    "//src/lib/testing/loop_fixture",
    "//src/tests/fidl/server_suite/fidl:fidl.serversuite_cpp",
    "//third_party/googletest:gtest",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
    "//zircon/system/ulib/service:service-llcpp",
  ]
}

test("harness_test") {
  output_name = "harness_test"
  sources = [
    "bytes.h",
    "bytes_tests.cc",
  ]
  deps = [
    "//src/lib/fidl/cpp:cpp_base",
    "//src/lib/fxl/test:gtest_main",
  ]
}

group("tests") {
  testonly = true
  deps = [ ":harness_test($host_toolchain)" ]
}
