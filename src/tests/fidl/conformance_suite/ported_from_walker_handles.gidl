success("MultiplePresentHandles") {
    handle_defs = {
        #0 = event(),
        #1 = channel(),
        #2 = event(),
    },
    value = MultipleNonnullableHandles{
        data0: 0,
        handle0: #0,
        data1: 1,
        handle1: #1,
        handle2: #2,
        data2: 2,
    },
    bytes = {
        v1, v2 = [
            num(0):4,
            repeat(0xff):4,
            num(1):8,
            repeat(0xff):4,
            repeat(0xff):4,
            num(2):8,
        ],
    },
    handles = {
        v1, v2 = [
            #0, #1, #2,
        ],
    },
}

success("SingleAbsentHandle") {
