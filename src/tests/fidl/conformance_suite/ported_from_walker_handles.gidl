success("SinglePresentHandle") {
    handle_defs = {
        #0 = event(),
    },
    value = NonnullableHandle{
        h: #0,
    },
    bytes = {
        v1, v2 = [
            repeat(0xff):4, padding:4,
        ],
    },
    handles = {
        v1, v2 = [
            #0,
        ],
    },
}

