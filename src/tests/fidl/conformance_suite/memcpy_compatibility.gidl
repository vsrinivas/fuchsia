success("TwoLayerStructInnerBool") {
    value = TwoLayerStructInnerBool{
        s: OneLayerStructWithBool{
            a: true,
            b: 2,
            c: 3,
            d: 4,
        },
        a: 5,
    },
    bytes = {
        v1, v2 = [
            num(1):1,
            num(2):1,
            num(3):2,
            num(4):4,
            num(5):8,
        ],
    },
}

decode_failure("TwoLayerStructInnerBoolBadValue") {
    type = TwoLayerStructInnerBool,
    bytes = {
        v1, v2 = [
            num(100):1,
            num(2):1,
            num(3):2,
            num(4):4,
            num(5):8,
        ],
    },
    err = INVALID_BOOLEAN,
}
