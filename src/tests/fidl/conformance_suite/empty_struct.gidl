// Bindings that use iovec with vectors may have special handling.
success("EmptyStructsInVectorInStruct") {
    value = EmptyStructsInVectorInStruct{
        v: [
            EmptyStruct{},
            EmptyStruct{},
            EmptyStruct{},
            EmptyStruct{},
        ],
    },
    bytes = {
        v1, v2 = [
            num(4):8,
            repeat(0xff):8,
            0x00, 0x00, 0x00, 0x00, padding:4,
        ],
    },
}

