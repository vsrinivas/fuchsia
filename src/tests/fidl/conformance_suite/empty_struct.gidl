success("OptionalEmptyStructPresent") {
    value = OptionalEmptyStructWrapper{
        s: EmptyStruct{},
    },
    bytes = {
        v1, v2 = [
            repeat(0xff):8,
            0x00, padding:7,
        ],
    },
}

success("OptionalEmptyStructAbsent") {
    value = OptionalEmptyStructWrapper{},
    bytes = {
        v1, v2 = [
            repeat(0x00):8,
        ],
    },
}

