    "type": "DriverManagerHandler",
    "name": "driver_manager_handler",
    "config": {}
  },
  {
    "type": "ShutdownWatcher",
    "name": "shutdown_watcher"
  },
  {
    "type": "SystemShutdownHandler",
    "name": "sys_shutdown",
