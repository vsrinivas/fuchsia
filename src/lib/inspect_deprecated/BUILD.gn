source_set("inspect_deprecated") {
  sources = [
    "hierarchy.cc",
    "hierarchy.h",
    "inspect.cc",
    "inspect.h",
  ]

  deps = [ "//src/lib/syslog/cpp" ]

  public_deps = [
    "//src/lib/inspect_deprecated/deprecated",
    "//zircon/public/lib/fit",
    "//zircon/public/lib/inspect",
    "//zircon/public/lib/zx",
