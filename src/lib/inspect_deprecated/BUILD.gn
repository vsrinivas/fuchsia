}

source_set("component") {
  sources = [
    "component.cc",
    "component.h",
  ]

  public_deps = [
    ":inspect_deprecated",
    "//sdk/lib/sys/cpp",
    "//sdk/lib/vfs/cpp",
    "//src/lib/inspect_deprecated/health",
  ]
}
