source_set("test_settings") {
  testonly = true

  sources = [
    "test_settings.cc",
    "test_settings.h",
  ]

  deps = [ "//src/lib/fxl" ]
}

# Generic main entry point target for GTest executables.
source_set("gtest_main") {
  testonly = true

  sources = [ "run_all_unittests.cc" ]

  deps = [
    ":test_settings",
    "//src/lib/fxl",
  ]

  public_deps = [ "//third_party/googletest:gtest" ]
}
