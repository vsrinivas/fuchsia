{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/realm_builder_server",
    },
    capabilities: [
        {
            resolver: "realm_builder_resolver",
            path: "/svc/fuchsia.component.resolution.Resolver",
        },
        {
            runner: "realm_builder",
            path: "/svc/fuchsia.component.runner.ComponentRunner",
        },
        {
            protocol: [
                "fuchsia.component.resolution.Resolver",
                "fuchsia.component.runner.ComponentRunner",
                "fuchsia.component.test.RealmBuilder",
                "fuchsia.component.test.RealmBuilderFactory",
            ],
        },
    ],
    use: [
        {
            protocol: [
                "fuchsia.sys.Environment",
                "fuchsia.sys.Loader",
            ],

            // Used to support cmx children, if/when appmgr is present.
            availability: "optional",
        },
    ],
    expose: [
        {
            resolver: "realm_builder_resolver",
            from: "self",
        },
        {
            runner: "realm_builder",
            from: "self",
        },
        {
            protocol: [
                "fuchsia.component.resolution.Resolver",
                "fuchsia.component.runner.ComponentRunner",
                "fuchsia.component.test.RealmBuilder",
                "fuchsia.component.test.RealmBuilderFactory",
            ],
            from: "self",
        },
    ],
}
