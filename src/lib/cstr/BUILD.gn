import("//build/rust/rustc_library.gni")
import("//build/test/test_package.gni")

rustc_library("cstr") {
  with_unit_tests = true
  edition = "2018"
  deps = [ "//third_party/rust_crates:libc" ]
}

unittest_package("cstr-test") {
  deps = [ ":cstr_test" ]
  tests = [
    {
      name = "cstr_lib_test"
      environments = basic_envs
    },
  ]
}

group("tests") {
  testonly = true
  deps = [ ":cstr-test" ]
}
