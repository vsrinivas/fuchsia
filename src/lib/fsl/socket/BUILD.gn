    "files.cc",
    "files.h",
    "socket_drainer.cc",
    "socket_drainer.h",
    "strings.cc",
    "strings.h",
  ]

  public_deps = [
    "//sdk/lib/syslog/cpp",
    "//src/lib/files",
    "//src/lib/fxl:common",
    "//zircon/public/lib/async-cpp",
    "//zircon/public/lib/fbl",
