{
  // Path to which to write archived data.
  "archive_path": "/data/archive",
  // Maximum available memory for an archive store.
  "max_archive_size_bytes": 10485760,
  // Maximum size a single archive event group can be.
  "max_event_group_size_bytes": 262144,
  // Number of threads available to Archive.
  "num_threads": 4,
  // Directories to summarize in the archivist's diagnostics.
  "summarized_dirs": {
    "archive": "/data/archive",
    "global_data": "/global_data",
    "global_tmp": "/global_tmp"
  }
}
