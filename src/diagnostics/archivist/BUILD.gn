    "//third_party/rust_crates:log",
    "//third_party/rust_crates:thiserror",
  ]

  sources = [ "src/main.rs" ]
}

package("archivist") {
  deps = [ ":bin" ]

  binaries = [
    {
      name = "archivist"
    },
  ]

  meta = [
    {
      path = rebase_path("meta/archivist.cmx")
      dest = "archivist.cmx"
    },
    {
      path = rebase_path("meta/archivist.cml")
      dest = "archivist.cm"
    },
    {
      path = rebase_path("meta/observer.cmx")
      dest = "observer.cmx"
    },
  ]
}

package("observer") {
  deps = [ ":bin" ]

  binaries = [
    {
      name = "archivist"
    },
  ]

  meta = [
    {
      path = rebase_path("meta/observer.cml")
      dest = "observer.cm"
    },
  ]

  resources = [
    {
      path = rebase_path("configs/observer_config.json")
      dest = "observer_config.json"
    },
  ]
}

config_data("archivist_config") {
  for_pkg = "archivist"
  outputs = [ "archivist_config.json" ]

  sources = [ "configs/archivist_config.json" ]
}

config_data("observer_config") {
  for_pkg = "archivist"
  outputs = [ "observer_config.json" ]

  sources = [ "configs/observer_config.json" ]
}

group("with_default_config") {
  deps = [
    ":archivist",
    ":archivist_config",
    ":observer",
    ":observer_config",
  ]
}

rustc_fuzzer("convert_debuglog_to_log_message_fuzzer") {
  deps = [
    ":lib",
    "//src/lib/fuzzing/rust:fuzz",
    "//src/lib/syslog/rust:syslog",
  ]
  non_rust_deps = [ "//zircon/system/ulib/syslog" ]
  source_root = "src/fuzzer.rs"

  sources = [ "src/fuzzer.rs" ]
}

fuzzers_package("archivist-fuzzers") {
  rust_fuzzers = [ ":convert_debuglog_to_log_message_fuzzer" ]
}

test_package("archivist_tests") {
  deps = [ ":lib_test" ]

  tests = [
    {
      name = "archivist_lib_lib_test"
      dest = "archivist_tests"
      environments = basic_envs
    },
  ]
}

group("tests") {
  testonly = true
  public_deps = [
    ":archivist-fuzzers",
    ":archivist_tests",
    "tests",
  ]
}
