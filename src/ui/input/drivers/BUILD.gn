group("drivers") {
  deps = [
    "cypress",
    "focaltech",
    "ft8201",
    "goodix",
    "hid",
    "hid-buttons",
    "hid-input-report",
    "hidctl",
    "i2c-hid",
    "usb-hid",
  ]
  if (current_cpu == "x64") {
    deps += [ "pc-ps2" ]
  }
}

group("tests") {
  testonly = true

  deps = [
    "bma253:tests",
    "cypress:tests",
    "ft8201:tests",
    "goodix:tests",
    "hid:tests",
    "hid-buttons:tests",
    "hid-input-report:hid-input-report-test",
    "hidctl:tests",
    "i2c-hid:tests",
    "usb-hid:tests",
    "virtio:tests",
  ]
}
