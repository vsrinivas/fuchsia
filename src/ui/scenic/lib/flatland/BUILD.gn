config("glm_config") {
  include_dirs = [ "//third_party/glm" ]

  defines = [ "GLM_ENABLE_EXPERIMENTAL" ]
}

source_set("flatland") {
  sources = [
    "engine.cc",
    "engine.h",
    "flatland.cc",
    "flatland.h",
    "flatland_presenter.h",
    "global_image_data.cc",
    "global_image_data.h",
    "global_matrix_data.cc",
    "global_matrix_data.h",
    "global_topology_data.cc",
    "global_topology_data.h",
    "hanging_get_helper.h",
    "link_system.cc",
    "link_system.h",
    "transform_graph.cc",
    "transform_graph.h",
    "transform_handle.cc",
    "transform_handle.h",
    "uber_struct.h",
    "uber_struct_system.cc",
    "uber_struct_system.h",
  ]

  public_configs = [ ":glm_config" ]

  public_deps = [
    "//sdk/fidl/fuchsia.hardware.display",
    "//sdk/fidl/fuchsia.ui.scenic",
    "//sdk/fidl/fuchsia.ui.scenic.internal",
    "//src/lib/fxl",

    # TODO(56879): this dependency should be broken down into smaller libraries, since it is
    # currently only used for escher::FenceQueue.
    "//src/ui/lib/escher",
    "//src/ui/lib/glm_workaround",
    "//zircon/public/lib/fit",
  ]

  deps = [
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
    "//src/ui/scenic/lib/display:display",
    "//src/ui/scenic/lib/flatland/renderer",
    "//src/ui/scenic/lib/gfx:object_linker",
    "//src/ui/scenic/lib/scheduling:frame_scheduler",
    "//zircon/system/ulib/trace",
  ]
}
