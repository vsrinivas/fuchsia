group("tests") {
  testonly = true

  public_deps = [ ":unittests" ]
}

executable("unittests") {
  output_name = "flatland_buffers_unittests"
  testonly = true
  sources = [ "buffer_collection_unittest.cc" ]

  # TODO(fxbug.dev/58615): Fix the leaks and remove this.
  deps = [
    "//build/config/sanitizers:suppress-lsan.DO-NOT-USE-THIS",
    "//src/lib/fxl/test:gtest_main",
    "//src/ui/scenic/lib/flatland/buffers",
  ]
}
