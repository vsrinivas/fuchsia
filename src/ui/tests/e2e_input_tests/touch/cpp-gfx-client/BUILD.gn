import("//build/package.gni")

package("cpp-gfx-client") {
  deps = [ ":cpp-gfx-client-binary" ]
  binaries = [
    {
      name = "cpp-gfx-client"
    },
  ]

  meta = [
    {
      path = rebase_path("meta/cpp-gfx-client.cmx")
      dest = "cpp-gfx-client.cmx"
    },
  ]
}

executable("cpp-gfx-client-binary") {
  output_name = "cpp-gfx-client"

  sources = [ "cpp-gfx-client.cc" ]

  deps = [
    "//garnet/public/lib/fostr/fidl/fuchsia.ui.gfx",
    "//garnet/public/lib/fostr/fidl/fuchsia.ui.input",
    "//sdk/fidl/fuchsia.ui.app",
    "//sdk/fidl/fuchsia.ui.gfx",
    "//sdk/fidl/fuchsia.ui.input",
    "//sdk/fidl/fuchsia.ui.scenic",
    "//sdk/fidl/fuchsia.ui.views",
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
    "//sdk/lib/ui/scenic/cpp",
    "//src/lib/fxl",
    "//src/ui/tests/e2e_input_tests/touch:fuchsia.test.ui",
    "//zircon/public/lib/zx",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
  ]
}
