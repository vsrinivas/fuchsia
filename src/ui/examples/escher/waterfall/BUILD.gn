executable("waterfall") {
  sources = [
    "waterfall_main.cc",
  ]

  deps = [
    ":waterfall_demo",
    "//src/ui/examples/escher/common",
    "//src/ui/lib/escher:vulkan",
  ]

  include_dirs = [
    "//lib",
    "//src/ui/lib/escher",
    "//third_party/glm",
  ]

  if (is_fuchsia) {
    deps += [ "//zircon/public/lib/trace" ]
  }
}

source_set("waterfall_demo") {
  sources = [
    "waterfall_demo.cc",
    "waterfall_demo.h",
  ]

  deps = [
    ":waterfall_scenes",
    "//src/ui/examples/escher/common:demo_base",
    "//src/ui/lib/escher:vulkan",
  ]
}

source_set("waterfall_scenes") {
  sources = [
    "scenes/paper_demo_scene1.cc",
    "scenes/paper_demo_scene1.h",
    "scenes/paper_demo_scene2.cc",
    "scenes/paper_demo_scene2.h",
    "scenes/scene.cc",
    "scenes/scene.h",
  ]

  deps = [
    "//src/ui/examples/escher/common:demo_base",
  ]
}
