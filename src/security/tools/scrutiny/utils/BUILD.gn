import("//build/host.gni")

import("//build/rust/rustc_binary.gni")
import("//build/rust/rustc_library.gni")

if (!is_fuchsia) {
  rustc_library("utils") {
    testonly = true
    name = "scrutiny_utils"
    with_unit_tests = true
    edition = "2018"
    visibility = [ "//src/security/tools/scrutiny/*" ]
    deps = [
      "//third_party/rust_crates:anyhow",
      "//third_party/rust_crates:libc",

      # TODO(57392): Move it back to //third_party once unification completes.
      "//zircon/third_party/zstd",
    ]
    test_deps = [ "//third_party/rust_crates:hex" ]

    enforce_source_listing = true

    sources = [
      "src/lib.rs",
      "src/zstd.rs",
    ]
  }
}

group("tests") {
  testonly = true
  public_deps = [ ":utils_test($host_toolchain)" ]
}
