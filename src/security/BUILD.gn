group("security") {
  testonly = true
  deps = [ ":tests" ]
}

group("tests") {
  testonly = true
  deps = [
    "bin:tests",
    "lib:tests",
    "pkg_test/tests",
    "tee_manager:tests",
    "tests/",
    "tools:tests",
  ]
}

if (is_host) {
  group("host_tests") {
    testonly = true
    deps = [ "lib:host_tests" ]
  }
}
