import("//build/components.gni")
import("//build/cpp/sdk_source_set.gni")
import("//build/test.gni")

sdk_source_set("cpp") {
  category = "experimental"
  sdk_name = "device-watcher"
  include_base = "//sdk"
  sources = [
    "device-watcher.cc",
    "device-watcher.h",
  ]
  public_deps = [
    "//zircon/system/ulib/async",
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/zx",
    "//zircon/system/ulib/zxc",
  ]
  deps = [
    "//sdk/fidl/fuchsia.device:fuchsia.device_cpp_wire",
    "//sdk/fidl/fuchsia.io:fuchsia.io_cpp_wire",
    "//sdk/lib/fdio",
  ]
}

test("test") {
  output_name = "device-watcher-cpp-test"
  sources = [ "test.cc" ]
  deps = [
    ":cpp",
    "//sdk/fidl/fuchsia.device:fuchsia.device_cpp_wire",
    "//sdk/lib/driver_test_realm/simple",
    "//src/lib/storage/vfs/cpp",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
    "//zircon/system/ulib/zxtest",
  ]
}

fuchsia_unittest_package("device-watcher-cpp-test") {
  deps = [ ":test" ]
}

group("tests") {
  testonly = true
  deps = [ ":device-watcher-cpp-test" ]
}
