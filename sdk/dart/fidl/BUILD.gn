  sdk_category = "partner"

  source_dir = "lib"

  null_safe = true

  sources = [
    "fidl.dart",
    "src/bits.dart",
    "src/codec.dart",
    "src/enum.dart",
    "src/error.dart",
    "src/hash_codes.dart",
    "src/interface.dart",
    "src/interface_async.dart",
    "src/message.dart",
    "src/struct.dart",
    "src/table.dart",
    "src/types.dart",
    "src/unknown_data.dart",
    "src/xunion.dart",
  ]

  deps = [
    "//third_party/dart-pkg/pub/meta",
    dart_package_label.zircon,
  ]
}
