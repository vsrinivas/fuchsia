    "invalid-case-for-constant",
    "protocol-name-includes-service",
    "string-bounds-not-specified",
    "vector-bounds-not-specified",
  ]

  sdk_category = "partner"

  sources = [
    "client.fidl",
    "constants.fidl",
    "server.fidl",
    "types.fidl",
  ]

  public_deps = [ "//sdk/fidl/fuchsia.bluetooth" ]
}
