library fuchsia.scenic.snapshot;

using fuchsia.mem;

/// Snapshot loader exported by `ViewProvider` to load snapshots into views
/// created from it.
[Discoverable]
protocol Loader {
    /// Load the snapshot from the Vmo buffer payload.
    Load(fuchsia.mem.Buffer payload);
};
