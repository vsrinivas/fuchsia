import("//build/go/go_library.gni")
import("//build/go/go_test.gni")

assert(is_host)

go_library("docgen") {
  name = "go.fuchsia.dev/fuchsia/tools/cppdocgen/docgen"
  sources = [
    "index.go",
    "read_header.go",
    "read_header_test.go",
    "write.go",
    "write_comment.go",
    "write_comment_test.go",
    "write_define.go",
    "write_define_test.go",
    "write_enum.go",
    "write_function.go",
    "write_function_test.go",
    "write_header.go",
    "write_header_test.go",
    "write_index.go",
    "write_record.go",
    "write_record_test.go",
    "write_test.go",
    "write_toc.go",
  ]
  deps = [ "../clangdoc" ]
}

go_test("test") {
  output_name = "docgen_test"
  gopackages = [ "go.fuchsia.dev/fuchsia/tools/cppdocgen/docgen" ]
  deps = [
    ":docgen",
    "../clangdoc",
  ]
}
