    sources = [
      "c/conformance.go",
      "config/defaults.go",
      "dart/benchmarks.go",
      "dart/common.go",
      "dart/conformance.go",
      "fuzzer_corpus/conformance.go",
      "golang/benchmarks.go",
      "golang/common.go",
      "golang/conformance.go",
      "golang/equality_builder.go",
      "golang/golang_test.go",
      "hlcpp/benchmarks.go",
