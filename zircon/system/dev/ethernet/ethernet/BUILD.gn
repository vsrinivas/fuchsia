zx_driver("ethernet") {
  sources = [ "ethernet.cc" ]
  deps = [
    "$zx/system/banjo/ddk.protocol.ethernet",
    "$zx/system/dev/lib/dev-operation",
    "$zx/system/fidl/fuchsia-hardware-ethernet:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fidl",
    "$zx/system/ulib/fidl-utils",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zircon-internal",
  ]
}

zx_test("ethernet-unittest") {
  testonly = true
  output_name = "ethernet-unittest"
  sources = [
    "ethernet-test.cc",
    "ethernet.cc",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.ethernet",
    "$zx/system/dev/lib/dev-operation",
    "$zx/system/dev/lib/fake_ddk",
    "$zx/system/fidl/fuchsia-hardware-ethernet:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fidl-utils",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zircon-internal",
    "$zx/system/ulib/zxtest",
  ]
}
