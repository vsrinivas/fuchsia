driver("optee") {
  sources = [
    "optee-client.cc",
    "optee-controller.cc",
    "optee-message.cc",
    "shared-memory.cc",
    "util.cc",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.composite",
    "$zx/system/banjo/ddk.protocol.platform.device",
    "$zx/system/banjo/ddk.protocol.sysmem",
    "$zx/system/banjo/ddk.protocol.tee",
    "$zx/system/dev/lib/device-protocol-platform-device",
    "$zx/system/dev/lib/mmio",
    "$zx/system/fidl/fuchsia-hardware-tee:c",
    "$zx/system/fidl/fuchsia-tee-manager:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fidl",
    "$zx/system/ulib/fidl-utils",
    "$zx/system/ulib/fit",
    "$zx/system/ulib/region-alloc",
    "$zx/system/ulib/tee-client-api:headers",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zircon-internal",
    "$zx/system/ulib/zx",
  ]
}

group("test") {
  testonly = true
  deps = [
    ":optee-message-test",
  ]
}

test("optee-message-test") {
  output_name = "optee-message-test"
  sources = [
    "optee-client.cc",
    "optee-controller.cc",
    "optee-message.cc",
    "shared-memory.cc",
    "test/optee-message-test.cc",
    "util.cc",
  ]
  include_dirs = [ "." ]
  deps = [
    "$zx/system/banjo/ddk.protocol.composite",
    "$zx/system/banjo/ddk.protocol.sysmem",
    "$zx/system/banjo/ddk.protocol.tee",
    "$zx/system/dev/lib/device-protocol-platform-device",
    "$zx/system/dev/lib/mmio",
    "$zx/system/fidl/fuchsia-hardware-tee:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/driver",
    "$zx/system/ulib/fidl-utils",
    "$zx/system/ulib/region-alloc",
    "$zx/system/ulib/tee-client-api:headers",
    "$zx/system/ulib/zircon-internal",
    "$zx/system/ulib/zxtest",
  ]
}
