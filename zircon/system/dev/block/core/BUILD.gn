zx_driver("core") {
  output_name = "block.core"
  deps = [ ":shared" ]
}

group("test") {
  testonly = true
  deps = [ ":core-unittest" ]
}

zx_test("core-unittest") {
  output_name = "blockcore"
  include_dirs = [ "." ]
  sources = [ "test/main.cc" ]
  deps = [
    ":shared",
    "$zx/system/banjo/ddk.protocol.block",
    "$zx/system/ulib/driver",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/io-scheduler",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zircon-internal",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
}

source_set("shared") {
  visibility = [ "./*" ]
  sources = [
    "block-device.cc",
    "iobuffer.cc",
    "manager.cc",
    "message.cc",
    "server.cc",
    "txn-group.cc",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.block",
    "$zx/system/banjo/ddk.protocol.block.partition",
    "$zx/system/banjo/ddk.protocol.block.volume",
    "$zx/system/dev/lib/operation",
    "$zx/system/fidl/fuchsia-hardware-block:c",
    "$zx/system/fidl/fuchsia-hardware-block-partition:c",
    "$zx/system/fidl/fuchsia-hardware-block-volume:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fidl-utils",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/storage-metrics",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zircon-internal",
    "$zx/system/ulib/zx",
  ]
}
