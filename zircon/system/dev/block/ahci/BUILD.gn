driver("ahci") {
  deps = [
    ":shared",
  ]
}

group("test") {
  testonly = true
  deps = [
    ":ahci-unittest",
  ]
}

test("ahci-unittest") {
  output_name = "ahci-unittest"
  sources = [
    "test/fake-bus.cpp",
    "test/main.cpp",
  ]
  deps = [
    ":shared",
    "$zx/system/banjo/ddk.protocol.block",
    "$zx/system/dev/lib/fake-bti",
    "$zx/system/dev/lib/fake_ddk",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/driver",
    "$zx/system/ulib/zxtest",
  ]
}

source_set("shared") {
  visibility = [ "./*" ]
  sources = [
    "controller.cpp",
    "pci-bus.cpp",
    "port.cpp",
    "sata.cpp",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.block",
    "$zx/system/banjo/ddk.protocol.pci",
    "$zx/system/dev/lib/mmio",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}
