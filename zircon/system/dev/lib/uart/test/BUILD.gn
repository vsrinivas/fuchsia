group("test") {
  testonly = true

  deps = [ ":uart-unittests" ]
}

zx_test("uart-unittests") {
  sources = [
    "driver-tests.cc",
    "onlcr-tests.cc",
    "pl011-tests.cc",
  ]
  deps = [
    "$zx/system/ulib/zxtest",
    "..",
    "..:uart-mock",
  ]
  if (is_fuchsia) {
    deps += [ "$zx/system/ulib/fdio" ]
  }
}
