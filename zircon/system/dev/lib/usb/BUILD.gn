zx_library("usb") {
  sdk = "source"
  sdk_headers = [
    "usb/usb-request.h",
    "usb/usb.h",
  ]
  sources = [
    "usb-request.c",
    "usb-wrapper.cc",
    "usb.c",
  ]
  public_deps = [
    # <ddk/usb/usb.h> has #include <ddk/protocol/usb.h>.
    "$zx/system/ulib/ddk:headers",

    # <usb/request-cpp.h> has  #include <lib/operation/operation.h>.
    "$zx/system/dev/lib/dev-operation:headers",
    "$zx/system/ulib/fit",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.usb",
    "$zx/system/banjo/ddk.protocol.usb.composite",
    "$zx/system/banjo/ddk.protocol.usb.request",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
  ]
}

group("usb-lib-test") {
  testonly = true
  deps = [
    ":usb-desc-lib-test",
    ":usb-request-cpp-test",
    ":usb-wrapper-test",
  ]
}

zx_test("usb-request-cpp-test") {
  output_name = "usb-request-cpp-test"
  sources = [ "request-cpp-test.cc" ]
  deps = [
    ":usb",
    "$zx/system/banjo/ddk.protocol.usb",
    "$zx/system/banjo/ddk.protocol.usb.function",
    "$zx/system/banjo/ddk.protocol.usb.request",
    "$zx/system/dev/lib/fake-bti",
    "$zx/system/dev/lib/fake_ddk",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
}

zx_test("usb-wrapper-test") {
  output_name = "usb-wrapper-test"
  sources = [ "usb-wrapper-test.cc" ]
  deps = [
    ":usb",
    "$zx/system/banjo/ddk.protocol.hidbus",
    "$zx/system/banjo/ddk.protocol.usb",
    "$zx/system/banjo/ddk.protocol.usb.composite",
    "$zx/system/dev/lib/fake-bti",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/driver",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zxtest",
  ]
}

zx_test("usb-desc-lib-test") {
  output_name = "usb-desc-lib-test"
  sources = [ "usb-desc-lib-test.cc" ]
  deps = [
    ":usb",
    "$zx/system/banjo/ddk.protocol.usb",
    "$zx/system/banjo/ddk.protocol.usb.composite",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/zxtest",
  ]
}
