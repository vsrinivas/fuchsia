    "$zx/system/banjo/ddk.protocol.amlogiccanvas",
    "$zx/system/banjo/ddk.protocol.platform.device",
    "$zx/system/dev/lib/device-protocol-pdev",
    "$zx/system/dev/lib/device-protocol-platform-device",
    "$zx/system/dev/lib/mmio",
    "$zx/system/ulib/ddk",
