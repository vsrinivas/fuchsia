driver("bma253") {
  sources = [
    "bma253.cpp",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.clock",
    "$zx/system/banjo/ddk.protocol.gpio",
    "$zx/system/banjo/ddk.protocol.hidbus",
    "$zx/system/banjo/ddk.protocol.i2c",
    "$zx/system/dev/lib/mmio",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fit",
    "$zx/system/ulib/hid",
    "$zx/system/ulib/simplehid",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}

test("bma253-test") {
  output_name = "bma253-test"
  sources = [
    "bma253-test.cpp",
    "bma253.cpp",
  ]
  deps = [
    "$zx/system/dev/lib/mmio",
    "$zx/system/dev/lib/mock-hidbus-ifc",
    "$zx/system/dev/lib/mock-i2c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/driver",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fit",
    "$zx/system/ulib/hid",
    "$zx/system/ulib/simplehid",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
  configs += [ "$zx/public/gn/config:static-libc++" ]
}
