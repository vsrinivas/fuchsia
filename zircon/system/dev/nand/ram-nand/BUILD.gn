driver("ram-nand") {
  sources = [
    "bind.cpp",
    "ram-nand-ctl.cpp",
  ]
  deps = [
    ":common",
    "$zx/system/banjo/ddk.protocol.nand",
    "$zx/system/fidl/fuchsia-hardware-nand:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fidl",
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}

source_set("common") {
  visibility = [ ":*" ]
  sources = [
    "ram-nand.cpp",
  ]
  deps = [
    "$zx/system/banjo/ddk.protocol.nand",
    "$zx/system/fidl/fuchsia-hardware-nand:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/ddktl",
    "$zx/system/ulib/sync",
  ]
}

