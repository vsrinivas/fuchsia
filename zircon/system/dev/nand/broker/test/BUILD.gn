group("test") {
  testonly = true
  deps = [
    ":nand-broker",
    ":nandpart-broker",
  ]
}

source_set("common") {
  testonly = true
  visibility = [ ":*" ]

  sources = [
    "broker-test.cc",
    "parent.cc",
  ]
  public_deps = [
    "$zx/system/banjo/ddk.protocol.nand",
    "$zx/system/fidl/fuchsia-device:llcpp",
    "$zx/system/fidl/fuchsia-hardware-nand:c",
    "$zx/system/fidl/fuchsia-nand:c",
    "$zx/system/ulib/devmgr-integration-test",
    "$zx/system/ulib/devmgr-launcher",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/ramdevice-client",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
}

zx_test("nand-broker") {
  sources = [ "main.cc" ]
  deps = [ ":common" ]
}

zx_test("nandpart-broker") {
  sources = [ "nandpart-main.cc" ]
  deps = [ ":common" ]
}
