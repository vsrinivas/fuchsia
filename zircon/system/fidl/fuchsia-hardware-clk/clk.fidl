library fuchsia.hardware.clk;
using zx;

const uint32 NAME_LEN = 30;

struct FrequencyInfo {
    array<uint8>:NAME_LEN clk_name;
    uint64 clk_freq;
};

[Layout = "Simple"]
interface Device {
    Measure(uint32 clk) -> (FrequencyInfo info);
    GetCount() -> (uint32 count);
};
