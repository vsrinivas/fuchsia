    "$zx/system/ulib/zircon",
  ]
}

zx_executable("vmos") {
  sources = [
    "vmo-utils.c",
    "vmos.cc",
  ]
  deps = [
    "$zx/system/fidl/fuchsia-boot:c",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/pretty",
    "$zx/system/ulib/task-utils",
    "$zx/system/ulib/zircon",
  ]
