group("psutils") {
  deps = [
    ":kill",
    ":killall",
    ":kstats",
    ":memgraph",
    ":ps",
    ":signal",
    ":threads",
    ":top",
    ":vmaps",
    ":vmos",
  ]
}

zx_executable("ps") {
  sources = [
    "ps.c",
    "ps_internal.c",
  ]
  deps = [
    "$zx/system/fidl/fuchsia-boot:c",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/pretty",
    "$zx/system/ulib/task-utils",
    "$zx/system/ulib/zircon",
  ]
}

zx_executable("top") {
  sources = [ "top.c" ]
  deps = [
    "$zx/system/fidl/fuchsia-boot:c",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/pretty",
    "$zx/system/ulib/task-utils",
    "$zx/system/ulib/zircon",
  ]
}

zx_executable("kill") {
  sources = [ "kill.c" ]
  deps = [
    "$zx/system/fidl/fuchsia-boot:c",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/task-utils",
    "$zx/system/ulib/zircon",
  ]
}

zx_executable("killall") {
  sources = [ "killall.c" ]
  deps = [
    "$zx/system/fidl/fuchsia-boot:c",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/task-utils",
    "$zx/system/ulib/zircon",
  ]
