source_set("threads") {
  testonly = true
  sources = [
    "register-set.cc",
    "threads.cc",
  ]
  deps = [
    ":thread-functions",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/mini-process",
    "$zx/system/ulib/runtime",
    "$zx/system/ulib/test-exceptions",
    "$zx/system/ulib/unittest",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}

source_set("thread-functions") {
  testonly = true
  visibility = [ ":*" ]
  sources = [ "thread-functions/thread-functions.cc" ]
  configs += [ "$zx/public/gn/config:no_sanitizers" ]
  deps = [
    "$zx/system/ulib/runtime",
    "$zx/system/ulib/zircon",
  ]
}
