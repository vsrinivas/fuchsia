assert(!defined(zx) || zx != "/",
       "This file can only be used in the Fuchsia GN build.")

import("//build/test.gni")
import("//build/unification/images/migrated_manifest.gni")

test("mtd") {
  # Dependent manifests unfortunately cannot be marked as `testonly`.
  # TODO(44278): Remove when converting this file to proper GN build idioms.
  if (is_fuchsia) {
    testonly = false
  }
  if (is_fuchsia) {
    configs += [ "//build/unification/config:zircon-migrated" ]
  }
  if (is_fuchsia) {
    fdio_config = [ "//build/config/fuchsia:fdio_config" ]
    if (configs + fdio_config - fdio_config != configs) {
      configs -= fdio_config
    }
  }
  sources = [ "mtd-interface-tests.cc" ]

  if (is_fuchsia) {
    deps = [ "//zircon/public/lib/zxtest" ]
  }

  if (current_os == "linux") {
    # This library requires an environment with mtd/mtd-user.h and MTD support.
    # Currently, Linux is the only OS with that support.
    deps = [
      "//zircon/public/lib/mtd-host",
      "//zircon/public/lib/zxtest-host",
    ]
  }

  if (current_cpu == "arm64") {
    defines = [ "ASTRO" ]
  }
}

migrated_manifest("mtd-manifest") {
  deps = [ ":mtd" ]
}
