group("test") {
  testonly = true
  deps = [
    ":gpt-unit",
  ]
}

test("gpt-unit") {
  sources = [
    "gpt-tests.cpp",
    "main.cpp",
  ]
  deps = [
    "$zx/system/fidl/fuchsia-hardware-block:c",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/gpt",
    "$zx/system/ulib/ramdevice-client",
    "$zx/system/ulib/unittest",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/third_party/ulib/cksum",
  ]
  configs += [ "$zx/public/gn/config:static-libc++" ]
}
