group("test") {
  testonly = true
  deps = [
    ":inspect",
    ":inspect-common",
  ]
}

test("inspect") {
  test_group = "sys"
  sources = [
    "health_unittest.cc",
    "heap_unittest.cc",
    "inspect_unittest.cc",
    "reader_unittest.cc",
    "scanner_unittest.cc",
    "snapshot_unittest.cc",
    "state_unittest.cc",
  ]

  deps = [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fzl",
    "$zx/system/ulib/inspect",
    "$zx/system/ulib/pretty",
    "$zx/system/ulib/zxtest",
  ]
}

test("inspect-common") {
  test_group = "sys"
  sources = [
    "common_unittest.cc",
  ]

  deps = [
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/inspect:inspect-common",
    "$zx/system/ulib/zxtest",
  ]
}
