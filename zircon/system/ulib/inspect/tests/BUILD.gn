import("//build/components.gni")
import("//build/fuzzing/fuzzer.gni")
import("//build/test.gni")

fuchsia_unittest_package("inspect-unittest-package") {
  deps = [ ":inspect" ]
}

group("tests") {
  testonly = true
  deps = [ ":inspect-unittest-package" ]
}

test("inspect") {
  sources = [
    "health_unittest.cc",
    "heap_unittest.cc",
    "inspect_unittest.cc",
    "lazy_unittest.cc",
    "reader_unittest.cc",
    "scanner_unittest.cc",
    "snapshot_unittest.cc",
    "state_unittest.cc",
    "value_list_unittest.cc",
  ]

  deps = [
    "//sdk/lib/fit-promise",
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/fzl",
    "//zircon/system/ulib/inspect",
    "//zircon/system/ulib/pretty",
    "//zircon/system/ulib/zxtest",
  ]
}

fuzzer("inspect-reader-fuzzer") {
  sources = [ "reader_fuzzer.cc" ]
  deps = [ "//zircon/system/ulib/inspect" ]
}
