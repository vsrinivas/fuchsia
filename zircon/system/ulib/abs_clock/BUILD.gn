import("//build/unification/zx_library.gni")

zx_library("abs_clock") {
  sdk = "source"
  sdk_headers = [ "abs_clock/clock.h" ]
  sources = [ "clock.cc" ]
  deps = [
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/sync",
    "//zircon/system/ulib/zx",
  ]
  public_deps = [ "//zircon/system/ulib/zx" ]
}

group("tests") {
  testonly = true
  deps = [ "test" ]
}
