library("zxs") {
  sdk = "static"
  sdk_headers = [
    "lib/zxs/protocol.h",
    "lib/zxs/zxs.h",
  ]
  sources = [
    "zxs.cpp",
  ]
  public_deps = [
    # <lib/zxs/zxs.h> has #include <fuchsia/net/c/fidl.h>.
    "$zx/system/fidl/fuchsia-net:c.headers",
  ]
  configs += [ "$zx/public/gn/config:visibility_hidden" ]
  deps = [
    "$zx/system/fidl/fuchsia-net:c",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
  ]
}
