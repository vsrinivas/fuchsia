assert(!defined(zx) || zx != "/",
       "This file can only be used in the Fuchsia GN build.")

import("//build/test.gni")
import("//build/unification/zbi/bootfs_test.gni")

group("test") {
  testonly = true
  deps = [
    ":fzl",
    ":fzl-zxtest",
  ]
}

test("fzl-zxtest") {
  output_name = "fzl-zxtest-test"
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [
    "pinned-vmo-tests.cc",
    "vmo-pool-tests.cc",
  ]
  deps = [
    "//sdk/fidl/fuchsia.io:fuchsia.io_c",
    "//sdk/lib/fdio",
    "//src/devices/testing/fake-bti",
    "//zircon/public/lib/async",
    "//zircon/public/lib/async-cpp",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/async-default",
    "//zircon/system/ulib/async-loop",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
    "//zircon/system/ulib/fzl",
    "//zircon/system/ulib/memfs",
  ]
}

test("fzl") {
  output_name = "fzl-test"
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [
    "fzl-test.cc",
    "memory_probe_tests.cc",
    "owned-vmo-mapper-tests.cc",
    "resizeable-vmo-mapper-tests.cc",
    "vmo-probe.cc",
    "vmo-vmar-tests.cc",
  ]
  deps = [
    "//sdk/fidl/fuchsia.io:fuchsia.io_c",
    "//sdk/lib/fdio",
    "//zircon/public/lib/async",
    "//zircon/public/lib/async-cpp",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/sync",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/async-default",
    "//zircon/system/ulib/async-loop",
    "//zircon/system/ulib/async-loop:async-loop-cpp",
    "//zircon/system/ulib/async-loop:async-loop-default",
    "//zircon/system/ulib/fzl",
    "//zircon/system/ulib/memfs",
  ]

  # TODO(47439): Fix the leaks and remove this.
  deps += [ "//build/config/sanitizers:suppress-lsan.DO-NOT-USE-THIS" ]
}

bootfs_test("fzl-bootfs-test") {
  name = "fzl-test"
  deps = [ ":fzl" ]
}

bootfs_test("fzl-zxtest-bootfs-test") {
  name = "fzl-zxtest-test"
  deps = [ ":fzl-zxtest" ]
}
