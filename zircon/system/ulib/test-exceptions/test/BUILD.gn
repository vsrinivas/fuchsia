assert(!defined(zx) || zx != "/",
       "This file can only be used in the Fuchsia GN build.")

import("//build/test.gni")
import("//build/test/test_package.gni")

group("test") {
  testonly = true
  deps = [ ":test-exceptions" ]
}

test("test-exceptions") {
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [ "exception-catcher-test.cc" ]
  deps = [
    "//zircon/public/lib/fdio",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/test-exceptions",
  ]
}

unittest_package("test-exceptions-package") {
  package_name = "test-exceptions"
  deps = [ ":test-exceptions" ]

  tests = [
    {
      name = "test-exceptions"
      dest = "test-exceptions-test"
    },
  ]
}
