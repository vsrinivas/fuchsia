import("$zx/public/gn/fuzzer.gni")

group("test") {
  testonly = true
  deps = [
    ":hid-parser",
    ":hid-parser-fuzzer",
  ]
}

zx_test("hid-parser") {
  sources = [
    "hid-descriptor-test.cc",
    "hid-helper-test.cc",
    "hid-parser-test.cc",
    "hid-report-data.cc",
    "hid-units-test.cc",
    "hid-utest-data.cc",
  ]
  deps = [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/hid",
    "$zx/system/ulib/hid-parser",
    "$zx/system/ulib/zxtest",
  ]
}

fuzzer("hid-parser-fuzzer") {
  sources = [ "hid-parser-fuzztest.cc" ]
  deps = [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/hid-parser",
  ]
}
