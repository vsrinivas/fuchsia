assert(!defined(zx) || zx != "/",
       "This file can only be used in the Fuchsia GN build.")

import("//build/test.gni")
import("//build/test/test_package.gni")

group("test") {
  testonly = true
  deps = [
    ":syslog",
    ":syslog-package",
    ":syslog-static",
    ":syslog-static-package",
  ]
}

test("syslog") {
  output_name = "syslog-test"
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [
    "syslog_socket_tests.cc",
    "syslog_tests.cc",
  ]
  deps = [
    "//sdk/fidl/fuchsia.logger:fuchsia.logger_llcpp",
    "//sdk/lib/fdio",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/syslog",
  ]
}

test("syslog-static") {
  output_name = "syslog-static-test"
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [
    "syslog_socket_tests.cc",
    "syslog_tests.cc",
  ]
  deps = [
    "//sdk/fidl/fuchsia.logger:fuchsia.logger_llcpp",
    "//sdk/lib/fdio",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/syslog:syslog-static",
  ]
  defines = [ "SYSLOG_STATIC" ]
}

unittest_package("syslog-package") {
  package_name = "syslog"
  deps = [ ":syslog" ]

  tests = [
    {
      name = "syslog-test"
    },
  ]
}

unittest_package("syslog-static-package") {
  package_name = "syslog-static"
  deps = [ ":syslog-static" ]

  tests = [
    {
      name = "syslog-static-test"
    },
  ]
}
