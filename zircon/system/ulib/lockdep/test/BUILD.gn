assert(!defined(zx) || zx != "/",
       "This file can only be used in the Fuchsia GN build.")

import("//build/test.gni")
import("//build/unification/zbi/bootfs_test.gni")

config("unused") {
  cflags = [ "-Wno-unneeded-internal-declaration" ]
}

test("lockdep-test") {
  output_name = "lockdep-test-test"
  if (is_fuchsia) {
    configs += [ "//build/unification/config:zircon-migrated" ]
  }
  if (is_fuchsia) {
    fdio_config = [ "//build/config/fuchsia:fdio_config" ]
    if (configs + fdio_config - fdio_config != configs) {
      configs -= fdio_config
    }
  }
  sources = [ "lock_dep_test.cc" ]
  deps = [
    "//sdk/lib/fdio",
    "//zircon/public/lib/lockdep",
    "//zircon/public/lib/zircon-internal",
    "//zircon/public/lib/zxtest",
  ]
  configs += [ ":unused" ]
}

group("test") {
  testonly = true
  deps = [ ":lockdep-test" ]
}

bootfs_test("lockdep-test-bootfs-test") {
  name = "lockdep-test-test"
  deps = [ ":lockdep-test" ]
}
