assert(!defined(zx) || zx != "/",
       "This file can only be used in the Fuchsia GN build.")

import("//build/test.gni")
import("//build/testing/bootfs_test.gni")

group("test") {
  testonly = true
  deps = [
    ":libhwreg",
    ":libhwreg-i2c",
  ]
}

test("libhwreg") {
  output_name = "libhwreg-test"
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [
    "asm-test.cc",
    "bitfields-test.cc",
    "indirect-test.cc",
  ]
  deps = [
    "//sdk/lib/fdio",
    "//src/devices/lib/mmio",
    "//src/lib/ddk",
    "//src/lib/ddktl",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/hwreg",
    "//zircon/public/lib/hwreg-mock",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
  ]
}

test("libhwreg-i2c") {
  output_name = "libhwreg-i2c-test"
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [ "i2c-hwreg-test.cc" ]
  deps = [
    "//sdk/banjo/ddk.protocol.i2c",
    "//sdk/lib/fdio",
    "//src/devices/i2c/testing/mock-i2c",
    "//src/lib/ddk",
    "//src/lib/ddktl",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/hwreg-i2c",
  ]
}

bootfs_test("libhwreg-i2c-bootfs-test") {
  name = "libhwreg-i2c-test"
  deps = [ ":libhwreg-i2c" ]
}

bootfs_test("libhwreg-bootfs-test") {
  name = "libhwreg-test"
  deps = [ ":libhwreg" ]
}
