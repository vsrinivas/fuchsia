assert(!defined(zx) || zx != "/",
       "This file can only be used in the Fuchsia GN build.")

import("//build/test.gni")
import("//build/test/test_package.gni")

group("test") {
  testonly = true
  deps = [
    ":libhwreg",
    ":libhwreg-i2c",
  ]
}

test("libhwreg") {
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [
    "asm-test.cc",
    "bitfields-test.cc",
    "indirect-test.cc",
  ]
  deps = [
    "//src/devices/lib/mmio",
    "//src/lib/ddk",
    "//src/lib/ddktl",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/fdio",
    "//zircon/public/lib/hwreg",
    "//zircon/public/lib/hwreg-mock",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/unittest",
  ]
}

test("libhwreg-i2c") {
  configs += [ "//build/unification/config:zircon-migrated" ]
  sources = [ "i2c-hwreg-test.cc" ]
  deps = [
    "//sdk/banjo/ddk.protocol.i2c",
    "//src/devices/i2c/testing/mock-i2c",
    "//src/lib/ddk",
    "//src/lib/ddktl",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/fdio",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/hwreg-i2c",
    "//zircon/system/ulib/unittest",
  ]
}

unittest_package("libhwreg-package") {
  package_name = "libhwreg"
  deps = [ ":libhwreg" ]

  tests = [
    {
      name = "libhwreg"
      dest = "libhwreg-test"
    },
  ]
}

unittest_package("libhwreg-i2c-package") {
  package_name = "libhwreg-i2c"
  deps = [ ":libhwreg-i2c" ]

  tests = [
    {
      name = "libhwreg-i2c"
      dest = "libhwreg-i2c-test"
    },
  ]
}
