assert(!defined(zx) || zx != "/",
       "This file can only be used in the Fuchsia GN build.")

import("//build/test.gni")
import("//build/unification/zbi/bootfs_test.gni")

import("//build/fuzzing/fuzzer.gni")

group("test") {
  testonly = true
  deps = [
    ":bootfs-parser-fuzzer",
    ":bootfs-test",
  ]
}

test("bootfs-test") {
  output_name = "bootfs-test-test"
  if (is_fuchsia) {
    configs += [ "//build/unification/config:zircon-migrated" ]
  }
  if (is_fuchsia) {
    fdio_config = [ "//build/config/fuchsia:fdio_config" ]
    if (configs + fdio_config - fdio_config != configs) {
      configs -= fdio_config
    }
  }
  sources = [ "parser-test.cc" ]
  deps = [
    "//sdk/lib/fdio",
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zxtest",
    "//zircon/system/ulib/bootfs",
  ]
}

fuzzer("bootfs-parser-fuzzer") {
  sources = [ "parser-fuzzer.cc" ]
  deps = [
    "//zircon/public/lib/fbl",
    "//zircon/public/lib/zx",
    "//zircon/system/ulib/bootfs",
  ]
}

bootfs_test("bootfs-test-bootfs-test") {
  name = "bootfs-test-test"
  deps = [ ":bootfs-test" ]
}
