zx_library("refcount") {
  sources = [ "blocking_refcount.cc" ]
  public_deps = [
    "$zx/system/ulib/sync",
    "$zx/system/ulib/zx",
  ]
}

group("test") {
  testonly = true
  deps = [ ":refcount-test" ]
}

zx_test("refcount-test") {
  testonly = true
  sources = [ "blocking_refcount_test.cc" ]
  deps = [
    ":refcount",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fdio",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
}
