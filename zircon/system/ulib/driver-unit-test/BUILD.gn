library("driver-unit-test") {
  sdk = "static"
  sdk_headers = [
    "driver-unit-test/logger.h",
    "driver-unit-test/utils.h",
  ]
  sources = [
    "logger.cpp",
    "utils.cpp",
  ]
  configs += [ "$zx/public/gn/config:visibility_hidden" ]
  deps = [
    "$zx/system/fidl/fuchsia-driver-test:c",
    "$zx/system/ulib/ddk",
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fidl",
    "$zx/system/ulib/zircon",
    "$zx/system/ulib/zx",
    "$zx/system/ulib/zxtest",
  ]
}
