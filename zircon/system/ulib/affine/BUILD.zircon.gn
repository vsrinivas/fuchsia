import("$zx_build/public/gn/migrated_targets.gni")

zx_library("affine") {
  sdk = "source"
  sdk_headers = [
    "lib/affine/ratio.h",
    "lib/affine/transform.h",
    "lib/affine/assert.h",
    "lib/affine/utils.h",
  ]
  sdk_migrated = true

  host = true
  kernel = true
  static = true

  sources = [
    "ratio.cc",
    "transform.cc",
  ]
}

group("tests") {
  testonly = true
  deps = [ "test:tests" ]
}
