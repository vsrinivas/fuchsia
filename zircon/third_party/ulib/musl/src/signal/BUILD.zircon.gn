source_set("signal") {
  deps = [ "$zx/third_party/ulib/musl:musl_internal" ]
  sources = [
    "getitimer.c",
    "kill.c",
    "killpg.c",
    "psiginfo.c",
    "psignal.c",
    "raise.c",
    "setitimer.c",
    "sigaction.c",
    "sigaddset.c",
    "sigaltstack.c",
    "sigandset.c",
    "sigdelset.c",
    "sigemptyset.c",
    "sigfillset.c",
    "siginterrupt.c",
    "sigisemptyset.c",
    "sigismember.c",
    "signal.c",
    "sigorset.c",
    "sigpause.c",
    "sigpending.c",
    "sigprocmask.c",
    "sigqueue.c",
    "sigrtmax.c",
    "sigrtmin.c",
    "sigsuspend.c",
    "sigtimedwait.c",
    "sigwait.c",
    "sigwaitinfo.c",
  ]

  configs -= [ "$zx_build_config:visibility_hidden" ]
}
