source_set("ipc") {
  deps = [ "//zircon/third_party/ulib/musl:musl_internal" ]
  sources = [
    "ftok.c",
    "msgctl.c",
    "msgget.c",
    "msgrcv.c",
    "msgsnd.c",
    "semctl.c",
    "semget.c",
    "semop.c",
    "semtimedop.c",
    "shmat.c",
    "shmctl.c",
    "shmdt.c",
    "shmget.c",
  ]

  configs -= [ "//build/config:symbol_visibility_hidden" ]

  # TODO(https://fxbug.dev/58162): delete the below and fix compiler warnings
  configs += [ "//build/config:Wno-conversion" ]
}
