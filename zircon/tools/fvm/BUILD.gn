zx_host_tool("fvm") {
  sources = [ "main.cc" ]
  deps = [
    "$zx/system/ulib/fbl",
    "$zx/system/ulib/fit",
    "$zx/system/ulib/fvm",
    "$zx/system/ulib/fvm-host",
    "$zx/third_party/ulib/safemath",
  ]

  if (current_os == "linux") {
    sources += [ "mtd.cc" ]
    deps += [
      "$zx/system/ulib/ftl-mtd",
      "$zx/system/ulib/mtd",
    ]
  } else {
    sources += [ "mtd-stub.cc" ]
  }
}
