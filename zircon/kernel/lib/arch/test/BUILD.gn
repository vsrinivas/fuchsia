import("//build/test.gni")

group("tests") {
  testonly = true
  deps = [ ":arch-tests($host_toolchain)" ]
}

if (is_host) {
  test("arch-tests") {
    sources = [
      "x86-cpuid-tests.cc",
      "x86-lbr-tests.cc",
    ]
    deps = [
      "//zircon/kernel/lib/arch",
      "//zircon/public/lib/zxtest",
      "//zircon/system/ulib/hwreg:hwreg-mock",
    ]
  }
}
