    /// ## See also
    ///
    /// TODO(fxbug.dev/32938)
    AddSubtractIoRange(resource struct {
        handle handle:RESOURCE;
        mmio uint32;
        base uint64;
        len uint64;
        add uint32;
    }) -> (struct {}) error status;
};
