action("thinfs") {
  script = "scripts/build_fuchsia.py"

  outputs = [ "$target_gen_dir/thinfs" ]

  args = [
    "--fuchsia-root",
    rebase_path("//."),
    "--go-binary",
    rebase_path("$root_gen_dir/third_party/go/bin/go"),
  ]

  deps = [
    "//third_party/go:go_runtime",
  ]
}
