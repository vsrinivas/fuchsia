import("//build/go/go_binary.gni")
import("//packages/package.gni")

go_binary("thinfs_bin") {
  output_name = "thinfs"
  gopackage = "thinfs/cmd/thinfs"
  go_dependencies = [ {
        package = "thinfs"
        source = "//garnet/go/src/thinfs"
      } ]
}

package("thinfs") {
  system_image = true

  deps = [
    ":thinfs_bin",
  ]

  binaries = [ {
        name = "thinfs"
      } ]
}
