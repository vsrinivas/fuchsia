  sources = [
    "audio.cc",
    "audio.h",
  ]

  deps = [
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/fsl",
  ]

  output_name = "media_client"
}

test("tests") {
  output_name = "media_client_tests"

  sources = [
    "test/audio_wrapper.c",
    "test/audio_test.cc",
  ]

  deps = [
    ":c",
  ]
}
