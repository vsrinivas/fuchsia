import("//garnet/public/lib/ui/config.gni")

group("skia") {
  public_deps = [
    ":fonts",
    ":type_converters",
    ":vmo",
  ]
}

source_set("fonts") {
  sources = [
    "skia_font_loader.cc",
    "skia_font_loader.h",
  ]

  deps = [
    ":type_converters",
    ":vmo",
    "//garnet/public/lib/fonts/fidl",
    "//garnet/public/lib/ftl",
    "//third_party/skia",
  ]
}

source_set("type_converters") {
  sources = [
    "type_converters.cc",
    "type_converters.h",
  ]

  public_deps = [
    "//garnet/public/lib/ui/geometry/fidl",
    "//third_party/skia",
  ]
}

source_set("vmo") {
  sources = [
    "skia_vmo_data.cc",
    "skia_vmo_data.h",
  ]

  public_deps = [
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
    "//magenta/system/ulib/mx",
    "//third_party/skia",
  ]

  deps = [ "//magenta/system/ulib/trace" ]
}
