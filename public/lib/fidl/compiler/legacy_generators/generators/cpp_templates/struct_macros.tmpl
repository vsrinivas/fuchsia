                               should_return_errors, indent_size) -%}
  {
    const ::fidl::internal::ArrayValidateParams {{name}}_validate_params(
      {{kind|get_array_validate_params_ctor_args|indent(indent_size)}});
{%-       if should_return_errors -%}
    auto retval =
{%-       endif -%}
    ::fidl::SerializeArray_({{input}}, {{buffer}}, {{output}},
                          &{{name}}_validate_params);
{%-       if should_return_errors %}
    if (retval != ::fidl::internal::ValidationError::NONE)
      return retval;
{%-       endif %}
  }
{%- endmacro -%}

