import("//garnet/public/lib/fidl/fidl.gni")

# For consumption outside modular.
fidl("story") {
  sources = [
    "link.fidl",
    "per_device_story_info.fidl",
    "story_controller.fidl",
    "story_info.fidl",
    "story_marker.fidl",
    "story_provider.fidl",
    "story_shell.fidl",
    "story_state.fidl",
  ]

  deps = [
    "//garnet/public/lib/app/fidl:service_provider",
    "//apps/modular/services/component",
    "//apps/modular/services/module:module_controller",
    "//apps/modular/services/module:module_data",
    "//apps/modular/services/surface",
    "//garnet/public/lib/ui/views/fidl",
  ]
}

# Only for implementation of modular.
fidl("private") {
  sources = [
    "story_data.fidl",
  ]

  public_deps = [
    ":story",
  ]

  deps = [
    "//apps/ledger/services/internal",
    "//apps/ledger/services/public",
    "//garnet/public/lib/ui/views/fidl",
  ]

  visibility = [ "//apps/modular/*" ]
}
