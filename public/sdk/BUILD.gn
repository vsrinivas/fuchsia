has_sdk_id = sdk_id != ""

if (has_sdk_id) {
  sdk_id_file = "$target_gen_dir/sdk_id.txt"
  write_file(sdk_id_file, sdk_id)

  sdk_documentation("sdk_id") {
    name = "sdk_id"

    category = "partner"

    files = [
      {
        source = sdk_id_file
        dest = "meta/id.txt"
      }
    ]
  }
}

