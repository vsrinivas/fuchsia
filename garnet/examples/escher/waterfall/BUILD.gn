executable("waterfall") {
  sources = [
    "waterfall_demo.cc",
    "waterfall_demo.h",
    "waterfall_main.cc",
  ]

  deps = [
    ":scenes",
    "//garnet/examples/escher/common",
    "//garnet/public/lib/escher:vulkan",
  ]

  include_dirs = [
    "//lib",
    "//garnet/public/lib/escher",
    "//third_party/glm",
  ]

  if (is_fuchsia) {
    deps += [ "//zircon/public/lib/trace" ]
  }
}

source_set("scenes") {
  sources = [
    "scenes/demo_scene.cc",
    "scenes/demo_scene.h",
    "scenes/paper_demo_scene1.cc",
    "scenes/paper_demo_scene1.h",
    "scenes/scene.cc",
    "scenes/scene.h",
  ]

  deps = [
    "//garnet/examples/escher/common",
  ]
}
