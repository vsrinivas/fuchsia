import("//build/package.gni")

source_set("lib") {
  sources = [
    "echo_client_app.cc",
    "echo_client_app.h",
  ]

  public_deps = [
    "//garnet/examples/fidl/services:echo",
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
  ]
}

executable("bin") {
  output_name = "echo_client_cpp_synchronous"

  sources = [ "echo_client.cc" ]

  deps = [
    ":lib",
    "//garnet/examples/fidl/services:echo",
    "//sdk/lib/fidl/cpp",
    "//sdk/lib/sys/cpp",
    "//zircon/public/lib/async-default",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/async-loop-default",
  ]
}

package("echo_client_cpp_synchronous") {
  deps = [ ":bin" ]

  binary = "echo_client_cpp_synchronous"

  meta = [
    {
      path = rebase_path("../meta/echo_client.cmx")
      dest = "echo_client_cpp_synchronous.cmx"
    },
  ]
}
