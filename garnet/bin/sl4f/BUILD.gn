  ]

  sources = [ "src/main.rs" ]
}

package("sl4f") {
  meta = [
    {
      path = "meta/sl4f.cmx"
      dest = "sl4f.cmx"
    },
    {
      path = rebase_path("proxy/meta/data_proxy.cmx")
      dest = "data_proxy.cmx"
    },
  ]

  deps = [
    ":bin",
    "proxy:bin",
  ]

  binaries = [
    {
      name = "sl4f"
    },
    {
      name = "data_proxy"
    },
  ]
}

