executable("a11y_manager") {
  output_name = "a11y_manager"

  sources = [
    "main.cc",
  ]

  deps = [
    ":lib",
    "//garnet/public/lib/component/cpp",
    "//garnet/public/lib/syslog/cpp",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/trace-provider",
  ]

  include_dirs = [ "//third_party/glm" ]
}

source_set("lib") {
  sources = [
    "app.cc",
    "app.h",
    "manager_impl.cc",
    "manager_impl.h",
    "semantic_tree.cc",
    "semantic_tree.h",
    "semantics/semantic_tree_impl.cc",
    "semantics/semantic_tree_impl.h",
    "semantics/semantics_manager_impl.cc",
    "semantics/semantics_manager_impl.h",
    "settings_manager.cc",
    "settings_manager.h",
    "toggler_impl.cc",
    "toggler_impl.h",
  ]

  public_deps = [
    "//sdk/fidl/fuchsia.accessibility",
    "//sdk/fidl/fuchsia.accessibility.semantics",
  ]

  deps = [
    "//garnet/lib/ui/gfx",
    "//garnet/public/lib/component/cpp",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/syslog/cpp",
    "//sdk/fidl/fuchsia.ui.gfx",
    "//sdk/fidl/fuchsia.ui.input",
    "//sdk/fidl/fuchsia.ui.viewsv1",
    "//sdk/lib/fidl/cpp",
  ]
}
