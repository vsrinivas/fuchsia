import("//build/package.gni")

executable("bin") {
  output_name = "tiles_ctl"

  sources = [
    "main.cc",
  ]

  deps = [
    "//garnet/public/lib/fsl",
    "//src/lib/fxl",
    "//sdk/fidl/fuchsia.developer.tiles",
    "//sdk/lib/sys/cpp",
    "//zircon/public/lib/fdio",
  ]
}

package("tiles_ctl") {
  deps = [
    ":bin",
  ]

  meta = [
    {
      path = "meta/tiles_ctl.cmx"
      dest = "tiles_ctl.cmx"
    },
  ]

  binaries = [
    {
      shell = true
      name = "tiles_ctl"
    },
  ]
}
