import("//build/package.gni")

group("cli") {
  testonly = true
  deps = [
    ":bin",
    ":guest",
  ]
}

executable("bin") {
  output_name = "guest"

  sources = [
    "balloon.cc",
    "balloon.h",
    "launch.cc",
    "launch.h",
    "list.cc",
    "list.h",
    "main.cc",
    "serial.cc",
    "serial.h",
    "socat.cc",
    "socat.h",
  ]

  deps = [
    "//sdk/fidl/fuchsia.guest",
    "//sdk/fidl/fuchsia.sys",
    "//sdk/lib/sys/cpp",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/svc/cpp",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/fit",
    "//zircon/public/lib/virtio",
  ]
}

package("guest") {
  deps = [
    ":bin",
  ]

  binaries = [
    {
      name = "guest"
      shell = true
    },
  ]
}
