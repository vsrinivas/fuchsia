import("//garnet/lib/magma/gnbuild/magma.gni")

group("integration") {
  testonly = true

  public_deps = [
    ":msd_arm_mali_integration_tests",
  ]
}

executable("msd_arm_mali_integration_tests") {
  testonly = true

  sources = [
    "test_fault_recovery.cc",
    "test_shutdown.cc",
  ]

  if (magma_enable_developer_build) {
    defines = [ "MSD_ARM_NAME=\"libmsd_arm_test.so\"" ]
  } else {
    defines = [ "MSD_ARM_NAME=\"libmsd_arm.so\"" ]
  }

  public_deps = [
    "$zircon_build_root/public/lib/fdio",
    "//garnet/lib/magma/include:magma_abi",
    "//garnet/lib/magma/src/libmagma",
    "//garnet/lib/magma/src/magma_util",
    "//garnet/lib/magma/tests/helper:test_device_helper",
    "//sdk/fidl/fuchsia.gpu.magma:fuchsia.gpu.magma_c",
    "//src/lib/fxl/test:gtest_main",
    "//third_party/googletest:gtest",
    "//zircon/public/lib/zx",
    "//zircon/public/lib/zx",
    "//zircon/system/fidl/fuchsia-device:fuchsia-device_llcpp",
  ]

  deps = [
    "../../include",
  ]
}
