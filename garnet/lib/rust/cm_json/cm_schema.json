{
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "path-clause": {
      "type": "string",
      "pattern": "^(/[^/]+)+$",
      "minLength": 1,
      "maxLength": 1024
    },
    "url-clause": {
      "type": "string",
      "pattern": "^[0-9a-z+\\-\\.]+://.+$",
      "minLength": 1,
      "maxLength": 4096
    },
    "startup-clause": {
      "type": "string",
      "pattern": "^(lazy|eager)$"
    },
    "durability-clause": {
      "type": "string",
      "pattern": "^(persistent|transient)$"
    },
    "name-clause": {
      "type": "string",
      "pattern": "^[0-9a-z_\\-\\.]+$",
      "minLength": 1,
      "maxLength": 100
    },
    "storage-type-clause": {
      "type": "string",
      "enum": [
        "data",
        "cache",
        "meta"
      ]
    },
    "rights-clause": {
        "type": "array",
        "minItems": 0,
        "uniqueItems": true,
        "items": {
            "type": "string",
            "enum": [
                "connect",
                "read_bytes",
                "write_bytes",
                "execute",
                "get_attributes",
                "update_attributes",
                "enumerate",
                "traverse",
                "modify_directory",
                "admin"
            ]
        }
    },
    "reference-clause": {
      "type": "object",
      "oneOf": [
        {
          "required": [ "realm" ]
        },
        {
          "required": [ "self" ]
        },
        {
          "required": [ "child" ]
        },
        {
          "required": [ "collection" ]
        },
        {
          "required": [ "storage" ]
        },
        {
          "required": [ "framework" ]
        }
      ],
      "properties": {
        "realm": {
          "type": "object",
          "title": "Component's containing realm (parent component)"
        },
        "self": {
          "type": "object",
          "title": "Component itself"
        },
        "child": {
          "type": "object",
          "title": "Component's child",
          "required": [ "name" ],
          "properties": {
            "name": {
              "title": "Child name",
              "allOf": [{ "$ref": "#/definitions/name-clause" }]
            }
          }
        },
        "collection": {
          "type": "object",
          "title": "Component's collection",
          "required": [ "name" ],
          "properties": {
            "name": {
              "title": "Collection name",
              "allOf": [{ "$ref": "#/definitions/name-clause" }]
            }
          }
        },
        "storage": {
          "type": "object",
          "title": "Component's storage section",
          "required": [ "name" ],
          "properties": {
            "name": {
              "title": "Storage section name",
              "allOf": [{ "$ref": "#/definitions/name-clause" }]
            }
          }
        },
        "framework": {
          "type": "object",
          "title": "Component framework"
        }
      }
    },
    "offer-clause": {
      "type": "object",
      "required": [
        "source",
        "source_path",
        "target",
        "target_path"
      ],
      "properties": {
        "source": {
          "title": "Offered capability source component",
          "allOf": [{ "$ref": "#/definitions/reference-clause" }]
        },
        "source_path": {
          "title": "Offered capability source path",
          "allOf": [{ "$ref": "#/definitions/path-clause" }]
        },
        "target": {
          "title": "Offered capability target",
          "allOf": [{ "$ref": "#/definitions/reference-clause" }]
        },
        "target_path": {
          "title": "Offered capability target path",
          "type": "string",
          "allOf": [{ "$ref": "#/definitions/path-clause" }]
        }
      }
    }
  },
  "properties": {
    "program": {
      "type": "object",
      "title": "Program information"
    },
    "uses": {
      "type": "array",
      "title": "Used capabilities",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "oneOf": [
          {
            "required": [ "service" ]
          },
          {
            "required": [ "service_protocol" ]
          },
          {
            "required": [ "directory" ]
          },
          {
            "required": [ "storage" ]
          },
          {
            "required": [ "runner" ]
          }
        ],
        "properties": {
          "service": {
            "type": "object",
            "title": "Used service capability",
            "required": [
              "source",
              "source_path",
              "target_path"
            ],
            "properties": {
              "source": {
                "title": "Used service source",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "source_path": {
                "title": "Used service source path",
                "allOf": [{ "$ref": "#/definitions/path-clause" }]
              },
              "target_path": {
                "title": "Used service target path",
                "allOf": [{ "$ref": "#/definitions/path-clause" }]
              }
            }
          },
          "service_protocol": {
            "type": "object",
            "title": "Used service protocol capability",
            "required": [
              "source",
              "source_path",
              "target_path"
            ],
            "properties": {
              "source": {
                "title": "Used service protocol source",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "source_path": {
                "title": "Used service protocol source path",
                "allOf": [{ "$ref": "#/definitions/path-clause" }]
              },
              "target_path": {
                "title": "Used service protocol target path",
                "allOf": [{ "$ref": "#/definitions/path-clause" }]
              }
            }
          },
          "directory": {
            "type": "object",
            "title": "Used directory capability",
            "required": [
              "source",
              "source_path",
              "target_path"
            ],
            "properties": {
              "source": {
                "title": "Used directory source",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "source_path": {
                "title": "Used directory source path",
                "allOf": [{ "$ref": "#/definitions/path-clause" }]
              },
              "target_path": {
                "title": "Used directory target path",
                "allOf": [{ "$ref": "#/definitions/path-clause" }]
              },
              "rights": {
                "title": "Used directory rights",
                "allOf": [{ "$ref": "#/definitions/rights-clause" }]
              }
            }
          },
          "storage": {
            "type": "object",
            "title": "Used storage capability",
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "title": "Used storage type",
                "allOf": [{ "$ref": "#/definitions/storage-type-clause" }]
              },
              "target_path": {
                "title": "Used storage target path",
                "allOf": [{ "$ref": "#/definitions/path-clause" }],
                "type": ["null", "string"]
              }
            }
          },
          "runner": {
            "type": "object",
            "title": "Used runner capability",
            "required": [
              "source_name"
            ],
            "properties": {
              "source_name": {
                "title": "Used runner name",
                "allOf": [{ "$ref": "#/definitions/name-clause" }]
              }
            }
          }
        }
      }
    },
    "exposes": {
      "type": "array",
      "title": "Exposed capabilities",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "oneOf": [
          {
            "required": [ "service" ]
          },
          {
            "required": [ "service_protocol" ]
          },
          {
            "required": [ "directory" ]
          },
          {
            "required": [ "runner" ]
          }
        ],
        "properties": {
          "service": {
            "type": "object",
            "title": "Exposed service capability",
            "required": [
              "source",
              "source_path",
              "target",
              "target_path"
            ],
            "properties": {
              "source": {
                "title": "Exposed service source component",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "source_path": {
                "title": "Exposed service source path",
                "allOf": [{ "$ref": "#/definitions/path-clause" }]
              },
              "target": {
                "title": "Exposed service target component",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "target_path": {
                "allOf": [{ "$ref": "#/definitions/path-clause" }],
                "title": "Exposed service target path"
              }
            }
          },
          "service_protocol": {
            "type": "object",
            "title": "Exposed service protocol capability",
            "required": [
              "source",
              "source_path",
              "target",
              "target_path"
            ],
            "properties": {
              "source": {
                "title": "Exposed service protocol source component",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "source_path": {
                "title": "Exposed service protocol source path",
                "allOf": [{ "$ref": "#/definitions/path-clause" }]
              },
              "target": {
                "title": "Exposed service protocol target component",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "target_path": {
                "allOf": [{ "$ref": "#/definitions/path-clause" }],
                "title": "Exposed service protocol target path"
              }
            }
          },
          "directory": {
            "type": "object",
            "title": "Exposed directory capability",
            "required": [
              "source",
              "source_path",
              "target",
              "target_path"
            ],
            "properties": {
              "source": {
                "title": "Exposed directory source component",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "source_path": {
                "title": "Exposed directory source path",
                "allOf": [{ "$ref": "#/definitions/path-clause" }]
              },
              "target": {
                "title": "Exposed directory target component",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "target_path": {
                "allOf": [{ "$ref": "#/definitions/path-clause" }],
                "title": "Exposed directory target path"
              },
              "rights": {
                "title": "Exposed directory rights",
                "allOf": [{ "$ref": "#/definitions/rights-clause" }]
              }
            }
          },
          "runner": {
            "type": "object",
            "title": "Exposed runner capability",
            "required": [
              "source",
              "source_name",
              "target",
              "target_name"
            ],
            "properties": {
              "source": {
                "title": "Exposed runner source component",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "source_name": {
                "title": "Exposed runner source name",
                "allOf": [{ "$ref": "#/definitions/name-clause" }]
              },
              "target": {
                "title": "Exposed runner target component",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "target_name": {
                "allOf": [{ "$ref": "#/definitions/name-clause" }],
                "title": "Exposed runner target name"
              }
            }
          }
        }
      }
    },
    "offers": {
      "type": "array",
      "title": "Offered capabilities",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "oneOf": [
          {
            "required": [ "service" ]
          },
          {
            "required": [ "service_protocol" ]
          },
          {
            "required": [ "directory" ]
          },
          {
            "required": [ "storage" ]
          },
          {
            "required": [ "runner" ]
          }
        ],
        "properties": {
          "service": {
            "title": "Offered service",
            "allOf": [{ "$ref": "#/definitions/offer-clause" }]
          },
          "service_protocol": {
            "title": "Offered service protocol",
            "allOf": [{ "$ref": "#/definitions/offer-clause" }]
          },
        "directory": {
          "type": "object",
          "title": "Offered directory",
          "required": [
            "source",
            "source_path",
            "target",
            "target_path"
          ],
          "properties": {
            "source": {
              "title": "Offered capability source component",
              "allOf": [{ "$ref": "#/definitions/reference-clause" }]
            },
            "source_path": {
              "title": "Offered capability source path",
              "allOf": [{ "$ref": "#/definitions/path-clause" }]
            },
            "target": {
              "title": "Offered capability target",
              "allOf": [{ "$ref": "#/definitions/reference-clause" }]
            },
            "target_path": {
              "title": "Offered capability target path",
              "type": "string",
              "allOf": [{ "$ref": "#/definitions/path-clause" }]
            },
            "rights": {
             "title": "Offered directory rights",
             "allOf": [{ "$ref": "#/definitions/rights-clause" }]
           }
          }
        },
          "storage": {
            "required": [
              "type",
              "source",
              "target"
            ],
            "properties": {
              "type": {
                "title": "Offered storage type",
                "allOf": [{ "$ref": "#/definitions/storage-type-clause" }]
              },
              "source": {
                "title": "Offered storage source component",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "target": {
                "title": "Offered storage target",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              }
            }
          },
          "runner": {
            "title": "Offered runner",
            "required": [
              "source",
              "source_name",
              "target",
              "target_name"
            ],
            "properties": {
              "source": {
                "title": "Offered runner source component",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "source_name": {
                "title": "Offered runner source name",
                "allOf": [{ "$ref": "#/definitions/name-clause" }]
              },
              "target": {
                "title": "Offered runner target",
                "allOf": [{ "$ref": "#/definitions/reference-clause" }]
              },
              "target_name": {
                "title": "Offered runner target name",
                "type": "string",
                "allOf": [{ "$ref": "#/definitions/name-clause" }]
              }
            }
          }
        }
      }
    },
    "children": {
      "type": "array",
      "title": "Child components",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "name",
          "url",
          "startup"
        ],
        "properties": {
          "name": {
            "allOf": [{ "$ref": "#/definitions/name-clause" }],
            "title": "Child component name"
          },
          "url": {
            "allOf": [{ "$ref": "#/definitions/url-clause" }],
            "title": "Child component URI"
          },
          "startup": {
            "allOf": [{ "$ref": "#/definitions/startup-clause" }],
            "title": "Startup mode"
          }
        }
      }
    },
    "storage": {
      "type": "array",
      "title": "Storage capability declarations",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "name",
          "source",
          "source_path"
        ],
        "properties": {
          "name": {
            "allOf": [{ "$ref": "#/definitions/name-clause" }],
            "title": "Child component name"
          },
          "source": {
            "title": "Backing directory source component",
            "allOf": [{ "$ref": "#/definitions/reference-clause" }]
          },
          "source_path": {
            "title": "Backing directory source path",
            "allOf": [{ "$ref": "#/definitions/path-clause" }]
          }
        }
      }
    },
    "collections": {
      "type": "array",
      "title": "Collections",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "name",
          "durability"
        ],
        "properties": {
          "name": {
            "allOf": [{ "$ref": "#/definitions/name-clause" }],
            "title": "Collection name"
          },
          "durability": {
            "allOf": [{ "$ref": "#/definitions/durability-clause" }],
            "title": "Durability"
          }
        }
      }
    },
    "facets": {
      "type": "object",
      "title": "Facets",
      "description": "Freeform dictionary containing third-party metadata"
    },
    "runners": {
      "type": "array",
      "title": "Runner capabilities",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "required": [
          "name",
          "source",
          "source_path"
        ],
        "properties": {
          "name": {
            "title": "Name of the declared runner",
            "allOf": [{ "$ref": "#/definitions/name-clause" }]
          },
          "source": {
            "title": "Relative source of the runner service",
            "allOf": [{ "$ref": "#/definitions/reference-clause" }]
          },
          "source_path": {
            "title": "Path of the capability within the specified source",
            "allOf": [{ "$ref": "#/definitions/path-clause" }]
          }
        }
      }
    }
  }
}
