    "//garnet/lib/overnet/environment:timer",
    "//garnet/lib/overnet/labels:node_id",
    "//garnet/lib/overnet/vocabulary:slice",
  ]
}

source_set("packet_nub_fuzzer_lib") {
  testonly = true
  sources = [
    "packet_nub_fuzzer.cc",
    "packet_nub_fuzzer.h",
  ]
  public_deps = [
    ":packet_nub",
  ]
