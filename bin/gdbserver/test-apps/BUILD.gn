    ":thread-test",
  ]
}

executable("exit-test") {
  testonly = true

  sources = [
    "exit-test.c",
  ]
}

executable("crash-test") {
  testonly = true

  sources = [
    "crash-test.c",
  ]
}

executable("loop-test") {
  testonly = true

  sources = [
    "loop-test.c",
  ]
}

executable("syscall-test") {
  testonly = true

  sources = [
    "syscall-test.c",
  ]

  libs = [
    "zircon",
  ]
}

executable("thread-test") {
  testonly = true

  sources = [
    "thread-test.c",
  ]
}
