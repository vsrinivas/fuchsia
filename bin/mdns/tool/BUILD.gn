import("//build/package.gni")

package("tool") {
  deps = [
    ":bin",
  ]

  binary = "mdns"

  package_name = "mdns"
}

executable("bin") {
  output_name = "mdns"

  sources = [
    "formatting.cc",
    "formatting.h",
    "main.cc",
    "mdns_impl.cc",
    "mdns_impl.h",
    "mdns_params.cc",
    "mdns_params.h",
  ]

  deps = [
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/mdns/cpp",
    "//garnet/public/fidl/fuchsia.mdns",
    "//zircon/public/lib/async-loop-cpp",
  ]
}
