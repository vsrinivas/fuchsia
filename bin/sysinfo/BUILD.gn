import("//build/package.gni")

executable("bin") {
  output_name = "sysinfo"

  sources = [
    "sysinfo.cc",
  ]

  libs = [ "zircon" ]

  deps = [
    "//garnet/public/lib/netstack/c",
  ]
}

package("sysinfo") {
  deps = [
    ":bin",
  ]

  binaries = [
    {
      name = "sysinfo"
      shell = true
    },
  ]
}
