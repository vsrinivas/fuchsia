group("media") {
  testonly = true

  deps = [
    ":services",
    ":apptests",
  ]
}

group("services") {
  deps = [
    "//apps/media/services/audio:audio_server",
    "//apps/media/services/flog_service:flog_service",
    "//apps/media/services/media_service:media_service",
    "//apps/media/tools/flog_viewer:flog_viewer",
  ]
}

group("apptests") {
  testonly = true

  deps = [
    "//apps/media/cpp:apptests",
    "//apps/media/services/common:apptests",
    "//apps/media/services/framework:apptests",
    "//apps/media/services/media_service:apptests",
    "//apps/media/services/util:apptests",
  ]
}
