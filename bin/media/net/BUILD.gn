source_set("net") {
  sources = [
    "media_player_messages.cc",
    "media_player_messages.h",
    "media_player_net_stub.cc",
    "media_player_net_stub.h",
    "serialization.cc",
    "serialization.h",
  ]

  deps = [
    "//application/lib/app",
    "//apps/media/lib/timeline",
    "//apps/media/services",
    "//apps/netconnector/lib",
    "//apps/netconnector/services",
    "//lib/fidl/cpp/bindings",
    "//lib/ftl",
  ]
}

