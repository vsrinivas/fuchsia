import("//build/package.gni")

executable("bin") {
  output_name = "guest-tool"

  sources = [
    "dump.cc",
    "dump.h",
    "launch.cc",
    "launch.h",
    "main.cc",
    "serial.cc",
    "serial.h",
    "service.h",
  ]

  deps = [
    "//garnet/lib/machina/fidl",
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/app/fidl",
    "//garnet/public/lib/fsl",
    "//zircon/public/lib/pretty",
  ]
}

package("tool") {
  deprecated_system_image = true
  package_name = "guest-tool"

  deps = [
    ":bin",
  ]

  binaries = [
    {
      name = "guest"
      source = "guest-tool"
    },
  ]
}
