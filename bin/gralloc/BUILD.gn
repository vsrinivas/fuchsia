import("//build/package.gni")

executable("gralloc_service") {
  output_name = "gralloc"

  sources = [
    "main.cc",
  ]

  deps = [
    "//garnet/public/lib/component/cpp",
    "//garnet/public/lib/fidl/cpp",
    "//garnet/public/lib/fxl",
    "//garnet/public/fidl/fuchsia.gralloc",
    "//zircon/public/lib/async-loop-cpp",
  ]
}

package("gralloc") {
  deps = [
    ":gralloc_service",
  ]

  binary = "gralloc"
}
