import("//third_party/protobuf/proto_library.gni")

group("src") {
  deps = [
    "//cobalt/encoder"
  ]
}

group("tests") {
  testonly = true

  deps = [
    ":cobalt_testapp"
  ]
}

executable("cobalt_testapp") {
  testonly = true

  deps = [
    ":testapp",
  ]
}

source_set("testapp") {
  testonly = true

  sources = [
    "test_app.cc",
  ]

  deps = [
    "//cobalt/encoder",
    "//lib/ftl",
    "//lib/mtl",
    "//third_party/grpc:grpc++",
    # TODO(rudominer) Change to protobuf_lite after we have a different way
    # of deserializing a message from a human-readable string.
    "//third_party/protobuf:protobuf_full",
  ]

}

executable("cobalt_app") {
  sources = [
    "cobalt_main.cc",
    "config.h",
  ]

  deps = [
    "//application/lib/app",
    "//apps/cobalt_client/services:cobalt",
    "//cobalt/encoder",
    "//lib/ftl",
    "//lib/mtl",
    "//third_party/grpc:grpc++",
    # TODO(rudominer) Change to protobuf_lite after we have a different way
    # of deserializing a message from a human-readable string.
    "//third_party/protobuf:protobuf_full",
  ]
}


