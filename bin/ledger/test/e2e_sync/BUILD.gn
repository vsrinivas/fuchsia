visibility = [ "//peridot/bin/ledger/*" ]

executable("e2e_sync") {
  output_name = "ledger_e2e_sync"
  testonly = true

  sources = [
    "e2e_sync_main.cc",
    "ledger_app_instance_factory_e2e.cc",
  ]

  deps = [
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fidl/cpp/bindings",
    "//garnet/public/lib/fsl",
    "//garnet/public/lib/fxl",
    "//peridot/bin/cloud_provider_firebase/fidl",
    "//peridot/bin/ledger/callback",
    "//peridot/bin/ledger/convert",
    "//peridot/bin/ledger/fidl_helpers",
    "//peridot/bin/ledger/test:app_test",
    "//peridot/bin/ledger/test:ledger_instance_factory",
    "//peridot/bin/ledger/test:lib",
    "//peridot/bin/ledger/test/integration/sync",
    "//third_party/gtest",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
