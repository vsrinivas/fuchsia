visibility = [ "//apps/ledger/src/*" ]

group("put") {
  testonly = true

  public_deps = [
    ":ledger_benchmark_put",
  ]
}

source_set("lib") {
  testonly = true

  sources = [
    "put.cc",
    "put.h",
  ]

  public_deps = [
    "//application/lib/app",
  ]

  deps = [
    "//apps/ledger/services/internal",
    "//apps/ledger/services/public",
    "//apps/ledger/src/convert",
    "//apps/ledger/src/test:lib",
    "//apps/ledger/src/test/benchmark/lib",
    "//garnet/public/lib/fidl/cpp/bindings",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
  ]
}

executable("ledger_benchmark_put") {
  testonly = true

  deps = [
    ":lib",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
    "//magenta/system/ulib/trace-provider",
  ]

  sources = [
    "app.cc",
  ]
}
