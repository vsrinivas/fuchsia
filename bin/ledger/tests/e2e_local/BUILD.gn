    "//peridot/lib/scoped_tmpfs",
    "//peridot/public/fidl/fuchsia.ledger",
    "//third_party/googletest:gtest_main",
  ]

  data_deps = [
    "//peridot/bin/ledger/app",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
