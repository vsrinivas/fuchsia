    "//peridot/public/fidl/fuchsia.ledger",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/fit",
    "//zircon/public/lib/trace-provider",
  ]

  sources = [
    "convergence.cc",
    "convergence.h",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
