visibility = [ "//apps/ledger/src/*" ]

source_set("environment") {
  sources = [
    "environment.cc",
    "environment.h",
  ]

  public_deps = [
    "//apps/ledger/src/coroutine",
    "//apps/ledger/src/network",
    "//garnet/public/lib/ftl",
  ]

  deps = [
    "//lib/mtl",
  ]

  configs += [ "//apps/ledger/src:ledger_config" ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "environment_unittest.cc",
  ]

  deps = [
    ":environment",
    "//garnet/public/lib/ftl",
    "//lib/mtl",
    "//third_party/gtest",
  ]

  configs += [ "//apps/ledger/src:ledger_config" ]
}
