visibility = [ "//peridot/bin/ledger/*" ]

source_set("cache") {
  sources = [
    "lazy_value.h",
    "lru_cache.h",
  ]

  public_deps = [
    "//garnet/public/lib/fxl",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}

source_set("unittests") {
  testonly = true
  sources = [
    "lazy_value_unittest.cc",
    "lru_cache_unittest.cc",
  ]

  deps = [
    ":cache",
    "//peridot/lib/callback",
    "//third_party/gtest",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
