visibility = [ "//peridot/bin/ledger/*" ]

source_set("primitives") {
  sources = [
    "hash.cc",
    "hash.h",
    "hmac.cc",
    "hmac.h",
    "kdf.cc",
    "kdf.h",
    "rand.cc",
    "rand.h",
  ]

  deps = [
    "//garnet/public/lib/fxl",
    "//peridot/third_party/modp_b64",
    "//third_party/boringssl",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}

source_set("unittests") {
  testonly = true
  sources = [
    "crypto_test_util.cc",
    "hmac_unittest.cc",
    "kdf_unittest.cc",
  ]

  deps = [
    ":primitives",
    "//garnet/public/lib/fxl",
    "//third_party/gtest",
  ]

  configs += [ "//peridot/bin/ledger:ledger_config" ]
}
