import("//packages/package.gni")
import("//topaz/runtime/dart_runner/dart_app.gni")

dart_app("mi_dashboard_dart") {
  output_name = "mi_dashboard.dartx"

  main_dart = "main.dart"

  source_dir = "."

  deps = [
    "//topaz/public/lib/app/dart",
    "//topaz/public/lib/fidl/dart",
    "//peridot/public/lib/context/dart",
    "//peridot/public/lib/context/fidl:fidl_dart",
    "//peridot/public/lib/suggestion/fidl:debug_dart",
    "//peridot/public/lib/suggestion/fidl:fidl_dart",
    "//peridot/public/lib/user_intelligence/fidl:fidl_dart",
    "//third_party/dart-pkg/pub/http",
  ]
}

package("mi_dashboard") {
  app = true

  # this should be set to true once dart packages can be archives
  archive = false

  deps = [
    ":mi_dashboard_dart",
  ]

  binaries = [ {
        name = "mi_dashboard.dartx"
        dest = "agents/mi_dashboard.dartx"
      } ]

  resources = [
    {
      path = rebase_path("//peridot/bin/agents/mi_dashboard/webroot/index.html")
      dest = "mi_dashboard/webroot/index.html"
    },
    {
      path =
          rebase_path("//peridot/bin/agents/mi_dashboard/webroot/dashboard.js")
      dest = "mi_dashboard/webroot/dashboard.js"
    },
    {
      path =
          rebase_path("//peridot/bin/agents/mi_dashboard/webroot/dashboard.css")
      dest = "mi_dashboard/webroot/dashboard.css"
    },
    {
      path = rebase_path("//peridot/bin/agents/mi_dashboard/webroot/logo.png")
      dest = "mi_dashboard/webroot/logo.png"
    },
    {
      path = rebase_path("//peridot/bin/agents/mi_dashboard/dashboard.config")
      dest = "mi_dashboard/dashboard.config"
    },
  ]
}
