executable("service") {
  output_name = "shadertoy_service"

  sources = [
    "app.cc",
    "app.h",
    "compiler.cc",
    "compiler.h",
    "escher_utils.cc",
    "escher_utils.h",
    "glm_hack.h",
    "imagepipe_shadertoy.cc",
    "imagepipe_shadertoy.h",
    "main.cc",
    "pipeline.cc",
    "pipeline.h",
    "renderer.cc",
    "renderer.h",
    "shadertoy_factory_impl.cc",
    "shadertoy_factory_impl.h",
    "shadertoy_impl.cc",
    "shadertoy_impl.h",
    "shadertoy_state.cc",
    "shadertoy_state.h",
    "view_shadertoy.cc",
    "view_shadertoy.h",
  ]

  deps = [
    "services",
    "//application/lib/app",
    "//apps/mozart/lib/scene:session_helpers",
    "//apps/mozart/services/scene",
    "//apps/mozart/services/scene",
    "//apps/tracing/lib/trace:provider",
    "//garnet/public/lib/fidl/cpp/bindings",
    "//garnet/public/lib/ftl",
    "//lib/escher/escher",
    "//lib/escher/examples/common",
    "//lib/mtl",
    "//magma:vulkan",
  ]

  include_dirs = [
    "//lib",
    "//lib/escher",
    "//third_party/glm",
  ]
}
