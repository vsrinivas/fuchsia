import("//garnet/public/lib/ui/config.gni")

group("tests") {
  testonly = true

  public_deps = [
    ":unittests",
  ]
}

source_set("testing_deps") {
  testonly = true

  public_deps = [
    "//garnet/bin/ui/ime:common",
    "//third_party/gtest",
  ]
}

executable("unittests") {
  output_name = "ime_unittests"

  testonly = true

  sources = [
    "ime_unittest.cc",
  ]

  deps = [
    ":testing_deps",
    "//garnet/bin/ui/tests:main",
  ]
}
