source_set("gl") {
  public_deps = [
    ":bindings",
    ":ganesh",
  ]
}

source_set("bindings") {
  sources = [
    "gl_bindings_skia.cc",
    "gl_bindings_skia.h",
  ]

  deps = [
    "//mojo/public/c:GLES2",
    "//third_party/skia",
  ]
}

source_set("ganesh") {
  sources = [
    "ganesh_context.cc",
    "ganesh_context.h",
    "ganesh_framebuffer_surface.cc",
    "ganesh_framebuffer_surface.h",
    "ganesh_image_factory.cc",
    "ganesh_image_factory.h",
    "ganesh_texture_surface.cc",
    "ganesh_texture_surface.h",
  ]

  public_deps = [
    ":bindings",
  ]

  deps = [
    "//apps/mozart/glue/gl",
    "//lib/ftl",
    "//mojo/public/c:GLES2",
    "//mojo/public/c:MGL",
    "//mojo/services/geometry/interfaces",
    "//third_party/skia",
  ]
}
