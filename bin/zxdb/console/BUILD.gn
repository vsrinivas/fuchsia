static_library("console") {
  sources = [
    "command.cc",
    "command.h",
    "command_parser.cc",
    "command_parser.h",
    "command_utils.cc",
    "command_utils.h",
    "line_input.cc",
    "line_input.h",
    "main_loop.cc",
    "main_loop.h",
    "noun_memory.cc",
    "noun_process.cc",
    "noun_zxdb.cc",
    "output_buffer.cc",
    "output_buffer.h",
  ]

  public_deps = [
    "//garnet/bin/zxdb/client",
  ]

  if (current_toolchain != host_toolchain) {
    public_deps += [ "//zircon/public/lib/fdio" ]
  }
}

source_set("tests") {
  testonly = true
  sources = [
    "command_parser_unittest.cc",
    "command_utils_unittest.cc",
    "line_input_unittest.cc",
  ]

  deps = [
    ":console",
    "//third_party/googletest:gtest",
  ]
}
