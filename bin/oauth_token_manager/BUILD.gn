import("//third_party/flatbuffers/flatbuffer.gni")

group("all") {
  deps = [
    ":oauth_token_manager",
  ]
}

flatbuffer("credentials") {
  sources = [
    "credentials.fbs",
  ]
}

executable("oauth_token_manager") {
  sources = [
    "oauth_token_manager.cc",
  ]

  deps = [
    ":credentials",
    "//application/lib/app",
    "//apps/modular/lib/fidl:operation",
    "//apps/modular/lib/rapidjson",
    "//apps/modular/services/auth",
    "//apps/network/services",
    "//apps/web_runner/services",
    "//garnet/public/lib/fidl/cpp/bindings",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
    "//magenta/system/ulib/trace-provider",
  ]
}
