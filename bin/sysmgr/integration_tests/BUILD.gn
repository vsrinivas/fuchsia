import("//build/fidl/fidl.gni")
import("//build/package.gni")

fidl("interface") {
  name = "test.sysmgr"
  sources = [
    "interface.fidl",
  ]
}

executable("service") {
  testonly = true
  output_name = "test_sysmgr_service_startup"

  sources = [
    "service.cc",
  ]

  deps = [
    ":interface",
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fidl/cpp",
    "//garnet/public/lib/fxl",
    "//zircon/public/lib/async-default",
    "//zircon/public/lib/async-loop-cpp",
  ]
}

executable("service_startup_test") {
  testonly = true

  sources = [
    "service_startup_test.cc",
  ]

  deps = [
    ":interface",
    "//garnet/bin/appmgr:appmgr_for_test",
    "//garnet/public/lib/app/cpp",
    "//garnet/public/lib/fxl",
    "//garnet/public/lib/fxl/test:gtest_main",
    "//garnet/public/lib/gtest",
  ]
}

package("integration_tests") {
  testonly = true
  package_name = "sysmgr_integration_tests"

  deps = [
    ":service",
    ":service_startup_test",
  ]

  binaries = [
    {
      name = "test_sysmgr_service_startup"
    },
  ]

  tests = [
    {
      name = "service_startup_test"
    },
  ]
}
