import("//packages/package.gni")

package("test_runner") {
  system_image = true

  deps = [
    "server",
  ]

  binaries = [ {
        name = "test_runner"
      } ]
}

package("run_integration_tests") {
  system_image = true

  deps = [
    "report_result",
    "run_integration_tests",
    "server",
  ]

  binaries = [ {
        name = "report_result"
      } ]

  tests = [ {
        name = "run_integration_tests"
      } ]
}

package("test_runner_tests") {
  testonly = true
  system_image = true

  deps = [
    "test",
  ]

  tests = [
    {
      name = "fake_command"
    },
    {
      name = "fake_failing_test"
    },
    {
      name = "fake_passing_test"
    },
  ]
}
