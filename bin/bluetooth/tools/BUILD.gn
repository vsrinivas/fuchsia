import("//build/package.gni")

package("bt-tools") {
  deprecated_system_image = true

  deps = [
    "bt-cli",
    "bt-fake-hci",
    "bt-hci-tool",
    "bt-intel-tool",
    "bt-le-central",
    "bt-snoop",
  ]

  binaries = [
    {
      name = "bt_cli"
      dest = "bt-cli"
    },
    {
      name = "bt_fake_hci"
      dest = "bt-fake-hci"
    },
    {
      name = "bt-hci-tool"
    },
    {
      name = "bt-intel-tool"
    },
    {
      name = "bt_le_central"
      dest = "bt-le-central"
    },
    {
      name = "bt_snoop"
      dest = "bt-snoop"
    },
  ]
}
