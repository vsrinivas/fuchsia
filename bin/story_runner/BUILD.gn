executable("dev_story_shell") {
  sources = [
    "dev_story_shell.cc",
  ]

  deps = [
    "//apps/modular/lib/fidl:single_service_app",
    "//apps/modular/lib/fidl:view_host",
    "//apps/modular/services/story",
    "//garnet/public/lib/ui/views/fidl",
    "//garnet/public/lib/ftl",
    "//garnet/public/lib/mtl",
  ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "key_generator_unittest.cc",
    "link_impl_unittest.cc",
  ]

  deps = [
    ":story_runner",
    "//apps/modular/lib/testing:mock_base",
    "//third_party/gtest",
  ]
}
