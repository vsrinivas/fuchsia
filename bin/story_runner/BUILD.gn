group("all") {
  deps = [
    ":resolver",
    ":story_runner",
  ]
}

executable("story_runner") {
  sources = [
    "link_impl.cc",
    "story_impl.cc",
    "story_runner.cc",
  ]

  deps = [
    "//apps/modular/lib/app",
    "//apps/modular/lib/document_editor",
    "//apps/modular/lib/fidl:array_to_string",
    "//apps/modular/lib/fidl:strong_binding",
    "//apps/modular/services/document_store",
    "//apps/modular/services/story",
    "//apps/mozart/services/views",
    "//lib/fidl/cpp/bindings",
    "//lib/ftl",
    "//lib/mtl",
  ]
}

executable("resolver") {
  sources = [
    "resolver.cc",
  ]

  deps = [
    "//apps/modular/lib/fidl:single_service_application",
    "//apps/modular/lib/fidl:strong_binding",
    "//apps/modular/services/story",
    "//lib/fidl/cpp/bindings",
    "//lib/ftl",
    "//lib/mtl",
  ]
}
