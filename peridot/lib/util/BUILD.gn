group("util") {
  public_deps = [
    ":pseudo_dir_server",
    ":pseudo_dir_utils",
    ":string_escape",
  ]
}

source_set("string_escape") {
  sources = [
    "string_escape.cc",
    "string_escape.h",
  ]

  public_deps = [ "//src/lib/fxl" ]
}

source_set("pseudo_dir_utils") {
  sources = [
    "pseudo_dir_utils.cc",
    "pseudo_dir_utils.h",
  ]

  public_deps = [
    "//sdk/lib/vfs/cpp",
    "//src/lib/fxl",
  ]
}

source_set("pseudo_dir_server") {
  sources = [
    "pseudo_dir_server.cc",
    "pseudo_dir_server.h",
  ]

  public_deps = [
    "//sdk/lib/vfs/cpp",
    "//src/lib/files",
    "//src/lib/fsl",
    "//src/lib/fxl",
    "//zircon/public/lib/async-loop-cpp",
    "//zircon/public/lib/async-loop-default",
  ]
}

source_set("unittests") {
  testonly = true

  sources = [
    "pseudo_dir_server_unittest.cc",
    "pseudo_dir_utils_unittest.cc",
    "string_escape_unittest.cc",
  ]

  deps = [
    ":util",
    "//garnet/public/lib/gtest",
    "//src/lib/fxl",
    "//third_party/googletest:gtest",
  ]
}
