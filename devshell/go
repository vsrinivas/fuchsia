### run the go tool in fuchsia target configuration

source "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"/lib/vars.sh
fx-config-read

case "${FUCHSIA_ARCH}" in
	arm64)
		GOARCH=arm64
		ZARCH=arm64
		;;
	x64)
		GOARCH=amd64
		ZARCH=x64
		;;
esac
GOROOT="${FUCHSIA_BUILD_DIR}/goroot"

if [[ ! -d "${GOROOT}" ]]; then
	echo >&2 "You must build the goroot before running this command"
	exit 1
fi

ZIRCON="${FUCHSIA_DIR}/zircon" CC="${GOROOT}/misc/fuchsia/gccwrap.sh" ZIRCON_SYSROOT="${ZIRCON_BUILDROOT}/build-${ZARCH}/sysroot" GOOS=fuchsia GOARCH=${GOARCH} CGO_ENABLED=1 GOROOT="${GOROOT}" "${GOROOT}/bin/go" "$@"
