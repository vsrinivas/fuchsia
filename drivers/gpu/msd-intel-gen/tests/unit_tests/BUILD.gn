import("//magma/gnbuild/magma.gni")

source_set("unit_tests") {
  sources = [
    "test_buffer.cc",
    "test_context.cc",
    "test_engine_command_streamer.cc",
    "test_gtt.cc",
    "test_device.cc",
  ]

  deps = [
    "$magma_build_root/src/magma_util",
    "$magma_build_root/tests/mock:mmio",
    "$magma_build_root/tests/helper:platform_device_helper",
    "$msd_intel_gen_build_root/src",
    "//third_party/gtest",
  ]
}

source_set("msd_intel_conformance_tests") {
  deps = [
    "$magma_build_root/tests/unit_tests:msd_abi_conformance_tests",
    "$msd_intel_gen_build_root/src",
  ]
}

executable("msd_unit_tests") {
  sources = [
    "main.cc",
  ]

  deps = [
    ":msd_intel_conformance_tests",
    ":unit_tests",
    "//third_party/gtest",
  ]
}
