import("//build/config/fuchsia/rules.gni")

config("wlan_config") {
  include_dirs = [ "." ]

  defines = [
    "_LIBCPP_ENABLE_THREAD_SAFETY_ANNOTATIONS",
    "MX_DEBUGLEVEL=2",
  ]

  cflags = [ "-Wthread-safety" ]
}

source_set("mlme") {
  sources = [
    "clock.h",
    "element.cpp",
    "element.h",
    "logging.h",
    "mac_frame.cpp",
    "mac_frame.h",
    "mlme.cpp",
    "mlme.h",
    "packet.cpp",
    "packet.h",
    "scanner.cpp",
    "scanner.h",
    "wlan.h",
  ]

  deps = [
    "//apps/wlan/services:mlme_data_only",
  ]

  public_deps = [
    "//magenta/system/ulib/mx",
    "//magenta/system/ulib/mxtl",
  ]

  public_configs = [ ":wlan_config" ]
}

driver_module("wlan") {
  sources = [
    "binding.c",
    "device.cpp",
    "device.h",
    "driver.cpp",
    "logging.h",
  ]

  deps = [
    ":mlme(//build/toolchain/fuchsia:${target_cpu}-shared)",
    "//magenta/system/ulib/mx",
    "//magenta/system/ulib/mxtl",
  ]

  libs = [ "driver" ]
}
