    "macros.h",
    "msg_buf.c",
    "msg_buf.h",
    "p2p.h",
    "pci.c",
    "pci.h",
    "rx_desc.h",
    "sparse_array.c",
    "sparse_array.h",
    "swap.c",
    "swap.h",
    "targaddrs.h",
    "testmode.h",
    "thermal.h",
    "txrx.c",
    "txrx.h",
    "wmi.c",
    "wmi.h",
    "wmi-ops.h",
    "wmi-tlv.c",
