    "sem_unlink.c",
    "sem_wait.c",
    "thrd_create.c",
    "thrd_exit.c",
    "thrd_join.c",
    "thrd_sleep.c",
    "thrd_yield.c",
    "tls.c",
    "tss_create.c",
    "tss_delete.c",
    "tss_set.c",
    "vmlock.c",
  ]

  if (target_cpu == "arm") {
    sources += [
      "arm/__unmapself.s",
      "arm/atomics.s",
      "arm/clone.s",
      "arm/syscall_cp.s",
    ]
  } else if (target_cpu == "arm64") {
    sources += [
      "aarch64/__unmapself.s",
      "aarch64/clone.s",
      "aarch64/syscall_cp.s",
    ]
  } else if (target_cpu == "x64") {
    sources += [
      "x86_64/clone.s",
      "x86_64/syscall_cp.s",
    ]
  } else {
    sources += [
      "__unmapself.c",
      "clone.c",
      "syscall_cp.c",
    ]
    deps = [
      ":thread_no_stack_protector",
    ]
  }
}

if (target_cpu != "arm" && target_cpu != "arm64" && target_cpu != "x64") {
  source_set("thread_no_stack_protector") {
    visibility = [ ":thread" ]
    configs = [ "//gnbuild:no_stack_protector" ]
    sources = [
      "__set_thread_area.c",
    ]
  }
}
