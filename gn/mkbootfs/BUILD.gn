import("//packages/gn/mkbootfs/all_binaries.gni")

action("mkbootfs") {
  testonly = true

  script = "//buildtools/mkbootfs"
  manifest_file = "//packages/gn/mkbootfs/user.bootfs.manifest"
  output_file = "$root_build_dir/user.bootfs"
  outputs = [
    output_file,
  ]
  deps = all_binaries

  args = [
    "-o",
    rebase_path(output_file),
    rebase_path(manifest_file),
  ]
}
