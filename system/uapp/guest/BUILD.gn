import("//packages/package.gni")

executable("bin") {
  output_name = "garnet-guest"

  sources = [
    "guest.cpp",
    "linux.cpp",
    "zircon.cpp",
  ]

  deps = [
    "//zircon/system/ulib/fbl",
    "//zircon/system/ulib/machina",
  ]
}

package("guest") {
  system_image = true

  deps = [
    ":bin",
  ]

  binaries = [{
    name = "garnet-guest"
  }]
}
