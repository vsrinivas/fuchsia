{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "type": "object",
    "properties": {
        "tests": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/test"
            }
        },
        "outputs": {
            "type": "object",
            "properties": {
                "syslog_file": { "type": "string" }
            },
        }
    },
    "required": ["tests"],

    "definitions": {
        "test": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "output_file": { "type": "string" },
                "result": {
                    "type": "string",
                    "enum": ["PASS", "FAIL"]
                }
            },
            "required": [ "name", "output_file", "result" ]
        }
    }
}
