import("//garnet/public/lib/fidl/build/fidl/fidl.gni")

fidl("fidl") {
  name = "wlan_device"

  sources = [
    "iface.fidl",
    "phy.fidl",
  ]
}

fidl("service") {
  name = "wlan_device_service"

  sources = [
    "service.fidl",
  ]

  public_deps = [
    ":fidl",
  ]
}

fidl("wlantap") {
  name = "wlantap"

  sources = [
    "wlantap.fidl"
  ]

  public_deps = [
    ":fidl",
  ]
}
