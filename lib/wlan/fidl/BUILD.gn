import("//build/fidl/fidl.gni")

fidl("fidl") {
  name = "fuchsia.wlan.device"

  sources = [
    "phy.fidl",
  ]
}

fidl("sme") {
  name = "fuchsia.wlan.sme"

  sources = [
    "sme.fidl"
  ]
}

fidl("service") {
  name = "fuchsia.wlan.device.service"

  sources = [
    "service.fidl"
  ]

  public_deps = [
    ":fidl",
    ":sme",
    "//garnet/public/lib/wlan/fidl:stats"
  ]
}

fidl("wlantap") {
  name = "fuchsia.wlan.tap"

  sources = [
    "wlantap.fidl"
  ]

  public_deps = [
    ":fidl",
  ]
}
