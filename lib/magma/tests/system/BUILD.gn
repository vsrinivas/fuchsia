import("//magma/gnbuild/magma.gni")

group("system") {
  testonly = true

  deps = [ ":magma_system_tests" ]
}

executable("magma_system_tests") {
  testonly = true

  sources = [
    "main.cc",
    "test_hang_recovery.cc",
    "test_shutdown.cc",
  ]

  public_deps = [
    "$magma_build_root",
    "$magma_build_root/include:sys_abi",
    "$magma_build_root/src/magma_util",
    "$magma_build_root/src/magma_util/platform:buffer", # this is weird
    "//third_party/gtest",
  ]
}
