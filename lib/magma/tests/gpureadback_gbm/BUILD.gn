import("//gnbuild/magma.gni")

config("gpureadback_public_config"){
  include_dirs = ["."]
}

source_set("gpureadback") {
  public_configs = [
    ":gpureadback_public_config"
  ]

  cflags = [
    "-std=c++0x",
  ]

  sources = [
    "magma_readback_test.cc",
    "magma_readback_test.h",
    "gpureadback.h",
  ]

  deps = [
    "//third_party/ulib/musl",
  ]

  public_deps = [
    "$mesa_build_root:magma_framework",
  ]
}

executable("gpu_readback_test"){
  sources = [
    "main.c"
  ]
  deps = [
    ":gpureadback"
  ]
}
