import("//magma/gnbuild/magma.gni")

source_set("buffer") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_buffer.cc",
  ]

  deps = [
    ":object",
    "$magenta_build_root/system/ulib/mx",
    "$magma_build_root/src/magma_util",
    "$magma_build_root/src/magma_util/platform:trace",
  ]

  libs = [
    "ddk",
    "driver",
    "magenta",
  ]
}

source_set("interrupt") {
  sources = [
    "magenta_platform_interrupt.h",
  ]

  public_deps = [
    "$magenta_build_root/system/ulib/mx",
  ]
}

source_set("device") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_device.cc",
    "magenta_platform_device.h",
    "magenta_platform_interrupt.h",
  ]

  deps = [
    ":interrupt",
    "$magma_build_root/src/magma_util",
  ]

  libs = [
    "ddk",
    "driver",
    "magenta",
  ]
}

source_set("futex") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_futex.cc",
  ]

  deps = [
    "$magma_build_root/src/magma_util",
  ]

  libs = [
    "ddk",
    "driver",
    "magenta",
  ]
}

source_set("connection") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_connection.cc",
  ]

  deps = [
    ":event",
    "$magenta_build_root/system/ulib/mx",
    "$magma_build_root/include:msd_abi",
    "$magma_build_root/src/magma_util",
  ]

  libs = [
    "ddk",
    "driver",
    "magenta",
  ]
}

source_set("thread") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_thread.cc",
  ]

  libs = [ "magenta" ]
}

source_set("event") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_event.cc",
  ]

  deps = [
    "$magenta_build_root/system/ulib/mx",
    "$magma_build_root/src/magma_util",
  ]
}

source_set("object") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_object.cc",
  ]

  deps = [
    "$magenta_build_root/system/ulib/mx",
    "$magma_build_root/src/magma_util",
  ]
}

source_set("semaphore") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_semaphore.cc",
  ]

  deps = [
    ":object",
    "$magenta_build_root/system/ulib/mx",
    "$magma_build_root/src/magma_util",
    "$magma_build_root/src/magma_util/platform:trace",
  ]
}

source_set("port") {
  configs += [ "..:platform_include_config" ]

  sources = [
    "magenta_platform_port.cc",
  ]

  deps = [
    "$magenta_build_root/system/ulib/mx",
    "$magma_build_root/src/magma_util",
  ]
}

source_set("trace") {
  configs += [
    "..:platform_include_config",
    "..:tracing",
  ]

  sources = [
    "magenta_platform_trace.cc",
  ]

  deps = [
    "$magma_build_root/src/magma_util",
  ]

  if (magma_enable_tracing) {
    public_deps = [
      "//garnet/public/lib/mtl",
      "$magenta_build_root/system/ulib/async:loop",
      "$magenta_build_root/system/ulib/trace",
      "$magenta_build_root/system/ulib/trace-provider",
    ]
  }

  libs = [
    "mxio",
    "driver",
    "ddk",
    "magenta",
  ]
}
