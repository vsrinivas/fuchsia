library fuchsia.gpu.magma;

[Layout = "Simple"]
interface Device {
    // Get a parameter.
    1: Query(uint64 query_id) -> (uint64 result);

    // Get the magma ipc channels.
    2: Connect(uint64 client_id) -> (handle<channel> device_channel, handle<channel> notification_channel);
};
