# Escher can be developed for a Linux target only on a Linux host.  Putting
# the following targets in //garnet/lib/escher/BUILD.gn caused problems on OS X hosts,
# so they were moved into a separate file.

group("examples") {
  deps = [
    "//garnet/lib/escher/examples/waterfall($host_toolchain)",
    "//garnet/lib/escher/examples/sketchy($host_toolchain)",
  ]
}

group("tests") {
  testonly = true
  deps = [
    "//garnet/lib/escher/test:escher_unittests($host_toolchain)",
  ]
}
