/* See: https://elinux.org/Device_Tree_Usage */
/dts-v1/;

/ {
  model = "Machina";
  #address-cells = <1>;
  #size-cells = <1>;

  chosen {
    // Will be populated at run-time.
  };

  cpus {
    #address-cells = <1>;
    #size-cells = <0>;

    cpu@0 {
      device_type = "cpu";
      compatible = "arm,cortex-a53", "arm,armv8";
      reg = <0>;
      enable-method = "psci";
    };
  };

  memory@0 {
    device_type = "memory";
    reg = <0x00000000 0x09010000>,
          /* 4kb hole for RTC */
          <0x09020000 0x06fe0000>,
          /* 16mb hole for MMIO */
          <0x11000000 0x2e000000>;
          /* 16mb hole for ECAM */
  };

  psci {
    compatible = "arm,psci";
    method = "smc";
  };

  timer {
    compatible = "arm,armv8-timer";
    interrupts = <1 27 4>; /* PPI 27 HIGH/CPU-0 */
  };

  pclk {
    compatible = "fixed-clock";
    clock-frequency = <0x16e3600>;
    clock-output-names = "clk24mhz";
    phandle = <2>;
    #clock-cells = <0>;
  };

  rtc@09010000 {
    compatible = "arm,pl031", "arm,primecell";
    arm,primecell-periphid = <0x00041031>;
    reg = <0x09010000 0x1000>;
  };

  uart@fff32000 {
    compatible = "arm,pl011", "arm,primecell";
    arm,primecell-periphid = <0x00341011>;
    reg = <0xfff32000 0x1000>;
    clock-names = "apb_pclk";
    clocks = <2>;
  };

  gic: gic@e82b0000 {
    interrupt-controller;
    compatible = "arm,gic-400";
    reg = <0xe82b1000 0x1000>, /* GICD */
          <0xe82b2000 0x2000>; /* GICC */
    phandle = <1>;
    #address-cells = <0>;
    #interrupt-cells = <3>;
  };

  pci@10000000 {
    device_type = "pci";
    compatible = "pci-host-ecam-generic";
    reg = <0x3f000000 0x1000000>;
    bus-range = <0 0>;
    ranges = <0x2000000 0 0x10001000 0x10001000 0 0xfff000>;
    interrupt-map-mask = <0xf800 0 0 1>;
    interrupt-map = <0x0000 0 0 1 1 0 0 4>,
                    <0x0800 0 0 1 1 0 1 4>,
                    <0x1000 0 0 1 1 0 2 4>,
                    <0x1800 0 0 1 1 0 3 4>,
                    <0x2000 0 0 1 1 0 4 4>,
                    <0x2800 0 0 1 1 0 5 4>;
    #address-cells = <3>;
    #size-cells = <2>;
    #interrupt-cells = <1>;
  };
};
